.card.service-calendar-container.one-time-fees-container
  .card-header.bg-primary.text-white.justify-content-between.sticky-top{ data: { toggle: 'collapse', target: ".otf-collapse" } }
    %h3.mb-0<
      = icon('fas', 'caret-down pr-1 mr-2')
      = t('calendars.otf.header')
  .collapse.show.otf-collapse
    %table.table.table-bordered.service-calendar-table
      %thead
        = render 'service_calendars/master_calendar/otf/otf_header'
      %tbody
        = render 'service_calendars/master_calendar/otf/otf_line_items', service_request: service_request, sub_service_request: sub_service_request, merged: merged, consolidated: consolidated
