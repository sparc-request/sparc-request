.form-row.justify-content-around
  - if devise_mapping.registerable? && controller_name != 'registrations'
    .form-group
      = link_to t('devise.links.sign_up'), new_identity_registration_path(srid: @service_request.try(:id))
  - if controller_name != 'sessions'
    .form-group
      = link_to t('devise.links.sign_in'), new_session_path(resource_name)

.form-row.justify-content-around
  - if devise_mapping.recoverable? && controller_name != 'passwords'
    .form-group
      = link_to t('devise.links.forgot_password'), new_password_path(resource_name)
  - if devise_mapping.confirmable? && controller_name != 'confirmations'
    .form-group
      = link_to t('devise.links.confirmation_instructions'), new_confirmation_path(resource_name)
  - if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
    .form-group
      = link_to t('devise.links.unlock_instructions'), new_unlock_path(resource_name)
