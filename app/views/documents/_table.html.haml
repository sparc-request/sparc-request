.bootstrap-table-dropdown-overflow
  #documents-custom-toolbar
    %button.btn.btn-success#document-new{ title: t(:proper)[:document_management][:tooltips][:documents], data: { protocol_id: protocol.id, toggle: 'tooltip', delay: '{"show":"500"}' } }
      = t(:documents)[:add_document]
  %table#documents-table{ data: { toggle: 'table', search: 'true', 'show-columns' => 'true', 'show-refresh' => 'true', 'show-toggle' => 'true', url: documents_path(format: :json, protocol_id: protocol.id, service_request_id: service_request.id), striped: "true", toolbar: "#documents-custom-toolbar" } }
    %thead.primary-header
      %tr
        %th{ data: { class: 'col-sm-2 type', align: "left", sortable: "true", field: "type" } }
          = t(:documents)[:table_fields][:type]
        %th{ data: { class: 'col-sm-6 title', align: "left", sortable: "true", field: "title" } }
          = t(:documents)[:table_fields][:title]
        %th{ data: { class: 'col-sm-2 uploaded', align: "left", sortable: "true", field: "uploaded", sorter: "dateSorter" } }
          = t(:documents)[:table_fields][:uploaded]
        %th{ data: { class: 'col-sm-1 edit', align: "center", sortable: "false", field: "edit" } }
          = t(:actions)[:edit]
        %th{ data: { class: 'col-sm-1 delete', align: "center", sortable: "false", field: "delete" } }
          = t(:actions)[:delete]
