- messages  ||= defined?(errors) ? errors.full_messages : []
- margin      = defined?(margin) && !margin.nil? ? margin : true
- rounded     = defined?(rounded) && !rounded.nil? ? rounded : true  

.alert.alert-danger{ class: [margin ? '' : 'mb-0', rounded ? '' : 'rounded-0'], role: 'alert' }
  - if defined?(header)
    .d-flex.align-items-center
      %h3.alert-heading.mb-0.mr-3
        = header
      %div.error-messages.ml-1
        - messages.each do |msg|
          %p.mb-0
            = msg
  - else
    - messages.each do |msg|
      %p.mb-0
        = msg
