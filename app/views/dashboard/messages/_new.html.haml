.modal-dialog
  .modal-content
    = form_for [:dashboard, message], {remote: true, html: {class: "form-horizontal", role: "form"}} do |form|
      = form.hidden_field :notification_id
      = form.hidden_field :to
      = form.hidden_field :from
      = form.hidden_field :email
      .modal-header
        %button.close{type: 'button', data: {dismiss: 'modal'}}
          %span{aria: {hidden:'true'}} &times;
          %span.sr-only &times;
        %h4.modal-title.text-center= "New Message to #{message.recipient.full_name}"
      .modal-body
        .form-group
          = form.label "body", "Message", class: "col-sm-3 control-label"
          .col-sm-8
            = form.text_area :body, {class: 'form-control', rows: "6"}
      .modal-footer
        .center-block
          %button.btn.btn-default{type: 'button', data: {dismiss: 'modal'}} Close
          %button.btn.btn-primary{type: "submit"}
            %span.glyphicon.glyphicon-send{aria: {hidden: "true"}}
            %span Send
