%table#statusHistoryTable{ data: { toggle: 'table', url: status_history_dashboard_sub_service_request_path(id: sub_service_request.id, format: :json), search: "true", show_columns: 'true', show_refresh: 'true', sort_name: 'created_at', sort_order: 'desc' } }
  %thead.bg-light
    %tr
      %th{ data: { class: 'created_at', align: "left", sortable: "true", field: "created_at", sorter: "dateSorter" } }
        = t(:dashboard)[:sub_service_requests][:history][:status_history][:date]
      %th{ data: { class: 'changed_from', align: "left", sortable: "true", field: "changed_from" } }
        = t(:dashboard)[:sub_service_requests][:history][:status_history][:from]
      %th{ data: { class: 'changed_to', align: "left", sortable: "true", field: "changed_to" } }
        = t(:dashboard)[:sub_service_requests][:history][:status_history][:to]
      %th{ data: { class: 'changed_by', align: "left", sortable: "true", field: "changed_by" } }
        = t(:dashboard)[:sub_service_requests][:history][:status_history][:by]
