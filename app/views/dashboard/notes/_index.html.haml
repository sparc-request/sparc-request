.modal-dialog.modal-lg#notes-modal
  .modal-content
    .modal-header
      %button.close{type: 'button', data: {dismiss: 'modal'}}
        %span{aria: {hidden:'true'}} &times;
        %span.sr-only &times;
      %h4.modal-title.text-center
        = notable_type.underscore.humanize.titleize + t(:dashboard)[:notes][:index][:header]
    .modal-body
      #modal_errors
      - if notes.any?
        .details-table
          .details-header.text-center
            .col-xs-3
              = t(:dashboard)[:notes][:index][:user]
            .col-xs-2
              = t(:dashboard)[:notes][:index][:date]
            .col-xs-7
              = t(:models)[:note][:singular]
          - notes.each do |note|
            .detail
              .col-xs-3.name
                = note.identity.full_name
              .col-xs-2.created-at
                = format_date(note.created_at)
              .col-xs-7.comment
                = raw note.body
      -else
        .text-center
          = t(:dashboard)[:notes][:index][:none_message1] + notable_type + t(:dashboard)[:notes][:index][:none_message2]
    .modal-footer
      .center-block
        - if notable_type == "Fulfillment"
          %button#fulfillments_back.btn.btn-default{type: 'button', data: {line_item_id: notable.line_item.id}}
            = t(:actions)[:close]
        - else
          %button.btn.btn-default{type: 'button', data: {dismiss: 'modal'}}
            = t(:actions)[:close]
        %button.btn.btn-primary.note.new{type: "button", aria: {label: "New Note"}, data: {notable_id: notable_id, notable_type: notable_type}}
          %span.glyphicon.glyphicon-plus{aria: {hidden: "true"}}
          %span
            = t(:dashboard)[:notes][:index][:add]
