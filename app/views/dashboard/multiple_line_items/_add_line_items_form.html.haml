.modal-dialog
  .modal-content
    = form_tag(create_line_items_dashboard_multiple_line_items_path, method: "put", class: "form-horizontal new_visit", remote: true) do
      .modal-header
        %button.close{type: 'button', data: {dismiss: 'modal'}}
          %span{aria: {hidden:'true'}} &times;
          %span.sr-only &times;
        %h4#line_item.modal-title.text-center
          = t(:dashboard)[:multiple_line_items][:add]
      .modal-body
        #modal_errors
        .row
          .col-md-12
            = hidden_field_tag :schedule_tab, schedule_tab
            = hidden_field_tag :service_request_id, service_request.id
            = hidden_field_tag :sub_service_request_id, sub_service_request.id
            .form-group
              = label_tag "add_service_id", t(:dashboard)[:multiple_line_items][:service], class: "col-sm-4 control-label"
              .col-sm-7
                = select_tag "add_service_id", options_from_collection_for_select(services, 'id' , 'name'), class: "form-control selectpicker"
            -#.form-group
            -#  - label_tag "arm_id", options_from_collection_for_select(arms, "id", "name")
      .modal-footer
        .center-block
          %button.btn.btn-default{type: 'button', data: {dismiss: 'modal'}}
            = t(:actions)[:close]
          %input.btn.btn-primary#add_line_items_form_button{type: 'submit', value: t(:actions)[:add]}
