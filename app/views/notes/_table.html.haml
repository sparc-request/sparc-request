.bootstrap-table-dropdown-overflow
  - if notable_type_is_related_to_li_or_liv(notable_type)
    = display_service_name_and_code(notable_type, notable_id)
  - if !in_dashboard && !notable_type_is_related_to_li_or_liv(notable_type)
    #notes-custom-toolbar
      %button.btn.btn-success#note-new{ title: t(:proper)[:document_management][:tooltips][:notes], data: { notable_id: notable_id, notable_type: notable_type, in_dashboard: in_dashboard, toggle: 'tooltip', delay: '{"show":"500"}' } }
        = t(:notes)[:add]
  %table.table-striped#notes-table{ data: { toggle: 'table', url: notes_path(format: :json, note: { notable_id: notable_id, notable_type: notable_type, in_dashboard: in_dashboard }), striped: "true", toolbar: "#notes-custom-toolbar" } }
    %thead.primary-header
      %tr
        %th{ data: { class: 'col-sm-2 user', align: "left", sortable: "true", field: "user" } }
          = t(:notes)[:table_fields][:user]
        %th{ data: { class: 'col-sm-2 date', align: "left", sortable: "true", field: "date", sorter: 'dateSorter' } }
          = t(:notes)[:table_fields][:date]
        %th{ data: { class: 'col-sm-8 note', align: "left", sortable: "true", field: "note" } }
          = t(:notes)[:table_fields][:note]