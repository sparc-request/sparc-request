.modal-dialog{ role: 'document' }
  .modal-content
    .modal-header
      %h3.modal-title
        = t('admin.settings.view.header')
      %button.close{ type: 'button', data: { dismiss: 'modal' }, aria: { label: t('actions.close') } }
        %span{ aria: { hidden: 'true' } } &times;
    .modal-body
      .card
        %table.table.table-striped.mb-0
          %tbody
            %tr.d-flex
              %td.d-inline-block.col-3.border-top-0
                = Setting.human_attribute_name(:key)
              %td.d-inline-block.col-9
                = setting.key
            %tr.d-flex
              %td.d-inline-block.col-3
                = Setting.human_attribute_name(:value)
              %td.d-inline-block.col-9
                = raw(setting[:value])
            %tr.d-flex
              %td.d-inline-block.col-3
                = Setting.human_attribute_name(:data_type)
              %td.d-inline-block.col-9
                = setting.data_type
            %tr.d-flex
              %td.d-inline-block.col-3
                = Setting.human_attribute_name(:friendly_name)
              %td.d-inline-block.col-9
                = setting.friendly_name
            %tr.d-flex
              %td.d-inline-block.col-3
                = Setting.human_attribute_name(:description)
              %td.d-inline-block.col-9
                = setting.description 
            %tr.d-flex
              %td.d-inline-block.col-3
                = Setting.human_attribute_name(:group)
              %td.d-inline-block.col-9
                = setting.group
            %tr.d-flex
              %td.d-inline-block.col-3
                = Setting.human_attribute_name(:parent_key)
              %td.d-inline-block.col-9
                = setting.parent_key 
            %tr.d-flex
              %td.d-inline-block.col-3
                = Setting.human_attribute_name(:parent_value)
              %td.d-inline-block.col-9
                = setting.parent_value

    .modal-footer
      %button.btn.btn-secondary{ type: 'button', data: { dismiss: 'modal' } }
        = t('actions.close')
