%tr.table_header
  %th{ rowspan: 2, style: @review ? '' : 'height: 88px', class: @review ? '' : 'services_header' }= t(:calendar_page)[:headers][:services]
  %th{ rowspan: 2 }= t(:calendar_page)[:headers][:status]

  - if @study_tracker && !@merged # display study tracker otf header
    %th.qty_unit_header.width-130= t(:calendar_page)[:headers][:number]
    %th.qty_unit_header.width-130= t(:calendar_page)[:headers][:unit_type]
    %th.qty_type_header= t(:calendar_page)[:headers][:number]
    %th.number_of_units_header.width-130= t(:calendar_page)[:headers][:qty_type]
    %th


  - elsif @review # display review otf header
    %th.your_cost_header= t(:calendar_page)[:headers][:your_cost]
    %th{ colspan: 6 }
    %th{ rowspan: 2 }= t(:calendar_page)[:headers][:total_per_study]


  - else # display default or merged otf header
    - if (@portal || @study_tracker) && @merged
      %th.your_cost_header{ rowspan: 2 }= t(:calendar_page)[:headers][:your_cost]
      %th{ rowspan: 2, colspan: 7, height: 40, width: 375 }
      %th.total_per_study{ rowspan: 2 }= t(:calendar_page)[:headers][:total_per_study]
    - else
      %th.unit_costs_header{ colspan: 2 }= t(:calendar_page)[:headers][:unit_costs]
      %th{ rowspan: 2, colspan: 2 }
        %span
          = t(:calendar_page)[:headers][:unit_type]
          = t(:calendar_page)[:headers][:number]
      %th{ rowspan: 2, colspan: 2 }
        %span
          = t(:calendar_page)[:headers][:qty_type]
          = t(:calendar_page)[:headers][:number]
      %th{ rowspan: 2, colspan: 7, height: 40, width: 250 }
      - if @merged
        %th.total_per_study{ rowspan: 2 }= t(:calendar_page)[:headers][:total_per_study]

    - unless @merged
      %th= image_tag 'spinner.gif', class: 'service_calendar_spinner'
    - unless @portal || @study_tracker
      %tr.table_header
        %th.service_rate_header= t(:calendar_page)[:headers][:service_rate]
        %th.your_cost_header= t(:calendar_page)[:headers][:your_cost]
        - unless @merged
          %th.total_per_study{ rowspan: 2 }= t(:calendar_page)[:headers][:total_per_study]
