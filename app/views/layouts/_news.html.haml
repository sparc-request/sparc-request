.nav-item.dropdown.no-caret.news
  = link_to 'javascript:void(0)', class: 'nav-link dropdown-toggle', id: 'newsDropdown', role: 'button', aria: { haspopup: 'true', expanded: 'false' } do
    = icon('far', 'newspaper fa-2x')
  .dropdown-menu.dropdown-menu-xl-right{ aria: { labelledby: 'newsDropdown' } }
    .dropdown-header.d-flex.text-secondary
      %h5.m-0<
        = t('layout.navigation.news.header')
    .dropdown-divider
    - if @news.blank?
      .dropdown-item.bg-white
        = t('layout.navigation.news.none')
    - else
      - @news.each do |article|
        = link_to article[:link], target: :_blank, class: 'dropdown-item text-primary' do
          %h6.m-0<
            = article[:title].truncate(75)
            %br
            %small.text-muted
              = article[:date]
