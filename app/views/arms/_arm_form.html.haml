.modal-dialog
  .modal-content
    = form_for arm, url: path, remote: true, html: { class: "form-horizontal", role: "form" } do |a|
      .modal-header
        %button.close{ type: 'button', data: { dismiss: 'modal' } }
          %span{ aria: { hidden:'true' } } &times;
          %span.sr-only &times;
        %h4.modal-title.text-center
          = @header_text
      .modal-body
        #modal_errors
        .row
          .col-md-12
            = hidden_field_tag :protocol_id, protocol.id
            = hidden_field_tag :service_request_id, service_request.id
            .form-group
              = a.label :name, t(:arms)[:form_fields][:name], class: "col-sm-4 control-label required", title: t(:arms)[:name_tooltip], data: { toggle: 'tooltip', animation: 'false' }
              .col-sm-7
                = a.text_field :name, { class: 'form-control' }
            .form-group
              = a.label :subject_count, t(:arms)[:form_fields][:subject_count], class: "col-sm-4 control-label required"
              .col-sm-7
                = a.text_field :subject_count, { class: 'form-control' }
            .form-group
              = a.label :visit_count, t(:arms)[:form_fields][:visit_count], class: "col-sm-4 control-label required"
              .col-sm-7
                = a.text_field :visit_count, { class: 'form-control' }
      .modal-footer
        .center-block
          %button.btn.btn-default{ type: 'button', data: { dismiss: 'modal' } }
            = t(:actions)[:close]
          - if @header_text == 'Add Arm'
            %input.btn.btn-primary#add-arm-form-button{ type: 'submit', value: t(:actions)[:add] }
          - else
            %input.btn.btn-primary{ type: 'submit', value: t(:actions)[:save] }
