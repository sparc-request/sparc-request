- line_items_visits = []
- Dashboard::ServiceCalendars.pppv_line_items_visits_to_display(arm, service_request, sub_service_request, merged: merged, statuses_hidden: statuses_hidden).each do |sub_service_request_id, livs|
  - line_items_visits << livs
  - ssr    = SubServiceRequest.find(sub_service_request_id)
  - locked = !ssr.can_be_edited? && !admin

  -# SSR Header Row
  %tr.organization-header{ class: locked ? 'text-danger' : '' }
    %th{ colspan: 15 }
      = display_org_name(Dashboard::ServiceCalendars.display_organization_hierarchy(livs[0]), ssr, locked)

  -# Line Items Visits
  - livs.each do |liv|
    %tr.pppv-line-item-row{ class: locked ? 'bg-danger text-danger' : '' }
      %td.service-name{ colspan: 2 }
        = liv.service.display_service_name
      %td.status.text-center
        = AVAILABLE_STATUSES[ssr.status]
      %td.service-rate.text-center
        = display_service_rate(liv.line_item)
      %td.your-cost.text-center
        - if portal
          %a.edit-your-cost{ href: 'javascript:void(0)', data: { name: 'displayed_cost', title: t(:calendars)[:pppv][:editable_fields][:your_cost], value: number_with_precision(Service.cents_to_dollars(liv.line_item.applicable_rate), precision: 2), id: liv.line_item.id, url: dashboard_line_item_path(liv.line_item) } }
        - else
          = "$#{number_with_precision(Service.cents_to_dollars(liv.line_item.applicable_rate), precision: 2)}"

      - unless portal
        %td.unit-type.text-center
          = liv.line_item.service.displayed_pricing_map.unit_type

      %td.subject-count.text-center
        - if locked
          = liv.subject_count
        - else
          %a.edit-subject-count{ class: locked ? 'locked' : '', href: 'javascript:void(0)', data: { arm_id: arm.id, name: 'subject_count', title: t(:calendars)[:pppv][:editable_fields][:subject_count], value: liv.subject_count, url: dashboard_line_items_visit_path(liv, srid: service_request.id, portal: @portal) } }
      %td.text-center
        = Dashboard::ServiceCalendars.select_row(liv, sub_service_request, portal, locked)
      - visits      = liv.visits.paginate(page: page.to_i, per_page: 5)
      - totals_hash = liv.try(:per_subject_subtotals, visits)
      - visits.each_with_index do |v, index|
        %td.text-center.visit{ class: "visit-#{index+1}", data: { cents: totals_hash["#{v.id}"] || 0.00 } }
          = render 'service_calendars/master_calendar/pppv/line_item_visit_input', arm: arm, line_item: liv.line_item, visit: v, tab: tab, portal: portal, service_request: service_request, sub_service_request: sub_service_request, pages: pages, merged: merged, portal: portal, review: review, admin: admin, locked: locked
      - (5 - visits.size).times do
        %td &nbsp;

      - unless portal
        %td.text-center.pppv-per-patient-line-item-total
          = display_visit_based_direct_cost(liv)
        %td.text-center.pppv-per-study-line-item-total
          = Dashboard::ServiceCalendars.display_visit_based_direct_cost_per_study(liv)

- unless portal
  = render 'service_calendars/master_calendar/pppv/pppv_totals', service_request: service_request, arm: arm, tab: tab, line_items_visits: line_items_visits.flatten
