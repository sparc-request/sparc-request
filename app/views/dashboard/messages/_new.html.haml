= form_for [:dashboard, message], {remote: true, html: {class: 'w-100', role: 'form'}} do |f|
  = f.hidden_field :notification_id
  = f.hidden_field :to
  = f.hidden_field :from
  = f.hidden_field :email
  .form-group.row
    = f.label 'body', Message.human_attribute_name(:body), class: 'col-sm-3 text-right'
    .col-sm-9
      = f.text_area :body, { class: 'form-control', rows: 3 }
  .form-group.text-right.mb-0
    %button.btn.btn-secondary.mr-1{type: 'button', data: {dismiss: 'modal'}}
      = t(:actions)[:cancel]
    = f.submit t('actions.send'), class: 'btn btn-primary'
