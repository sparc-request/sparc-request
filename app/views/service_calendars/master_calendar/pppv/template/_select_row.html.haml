- checked      = liv.visits.where(research_billing_qty: 0).empty?
- check_param  = checked ? 'uncheck' : 'check'
- icon         = checked ? 'glyphicon-remove' : 'glyphicon-ok'
- klass        = checked ? 'btn-danger' : 'btn-success'
- tooltip      = checked ? t(:calendars)[:pppv][:editable_fields][:row_select][:uncheck] : t(:calendars)[:pppv][:editable_fields][:row_select][:check]
- url          = toggle_calendar_row_service_calendars_path(service_request_id: service_request.id, line_items_visit_id: liv.id, admin: admin, page: page, :"#{check_param}" => 'true')
- url         += "&sub_service_request_id=#{sub_service_request.id}" if sub_service_request

%span.btn.btn-xs.glyphicon.service-calendar-row{ id: "check-all-row-#{liv.id}", class: [icon, klass], data: { toggle: 'tooltip', animation: 'false', title: tooltip, url: url }, disabled: locked }
