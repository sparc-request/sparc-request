-# TODO place inline style in a stylesheet
.modal-dialog.full-calendar-modal{ style: 'width: 95%;' }
  .modal-content
    = hidden_field_tag :calendar_id, @protocol.id
    .modal-header
      %button.close{ type: 'button', data: { dismiss: 'modal' } }
        %span{ aria: { hidden: 'true' } } &times;
      %h4.text-center #{@protocol.type.capitalize} Information
    .modal-body
      #modal_errors
      .row
        .col-lg-12
          .panel-group
            .panel.panel-default
              .panel-heading
                %h4.panel-title= t(:ssr_dialog)[:project_study_details][:info]
              .panel-body
                %dl.dl-horizontal.pull-left
                  %dt= t(:ssr_dialog)[:project_study_details][:id]
                  %dd= @protocol.id

                  %dt= t(:ssr_dialog)[:project_study_details][:short_title]
                  %dd= @protocol.short_title

                  %dt= t(:ssr_dialog)[:project_study_details][:project_title]
                  %dd= @protocol.title

                  %dt= t(:ssr_dialog)[:project_study_details][:sponsor_name]
                  %dd= @protocol.sponsor_name

                  %dt= display_funding_source_title(@protocol)
                  %dd= display_funding_source_or_potential(@protocol)
            .panel.panel-default
              .panel-heading
                %h4.panel-title
                  Users
              %table.table.table-striped
                %tr
                  %th= t(:ssr_dialog)[:auth_users][:name]
                  %th= t(:ssr_dialog)[:auth_users][:role]
                  %th= t(:ssr_dialog)[:auth_users][:proxy_rights]
                - @protocol.project_roles.each do |pr|
                  %tr
                    %td= pr.identity.full_name
                    %td= USER_ROLES.key(pr.role)
                    %td= PROXY_RIGHTS.key(pr.project_rights)
            .panel.panel-default
              .panel-heading
                %h4.panel-title
                  Services
              .panel-body
                - if @protocol.has_per_patient_per_visit? @service_request, @portal
                  - @protocol.arms.each do |arm|
                    .arm_calendar_container.calendar-container{ data: { arm_id: arm.id } }
                      - next if arm.visit_groups.empty?
                      = render partial: '/service_calendars/master_calendar/pppv/pppv_calendar', locals: { service_request: @service_request, arm: arm }
                - if @protocol.has_one_time_fees? @service_request, @portal
                  .calendar-container
                    = render partial: '/service_calendars/master_calendar/otf/otf_calendar', locals: { service_request: @service_request }
                - unless @protocol.has_per_patient_per_visit?(@service_request, @portal) || @protocol.has_one_time_fees?(@service_request, @portal)
                  .alert.alert-danger{ role: 'alert' }
                    No services.
    .modal-footer
      %button.btn.btn-default{ type: 'button', data: { dismiss: 'modal' } }
        Close
