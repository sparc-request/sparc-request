#sub_service_request_header
  = render partial: 'dashboard/sub_service_requests/header', locals: { sub_service_request: @sub_service_request }

.tabs{role: 'tabpanel'}
  %ul.nav.nav-tabs.nav-justified{role: 'tablist'}
    %li.custom-tab.ssr_tab.active{role: 'presentation'}
      = link_to t(:dashboard)[:sub_service_requests][:tabs][:request_details][:header], "#details", {class: 'details-tab', "data-toggle" => 'tab', role: 'tab', "aria-controls" => 'details-tab'}
    %li.custom-tab.ssr_tab{role: 'presentation'}
      = link_to t(:dashboard)[:sub_service_requests][:tabs][:study_schedule][:header], "#study_schedule", {class: 'study_schedule-tab', "data-toggle" => 'tab', role: 'tab', "aria-controls" => 'study_schedule-tab'}
    %li.custom-tab.ssr_tab{role: 'presentation'}
      = link_to t(:dashboard)[:sub_service_requests][:tabs][:study_level_activities][:header], "#study_level_activities", {class: 'study_level_activities-tab', "data-toggle" => 'tab', role: 'tab', "aria-controls" => 'study_level_activities-tab'}
    %li.custom-tab.ssr_tab{role: 'presentation'}
      = link_to t(:dashboard)[:sub_service_requests][:tabs][:documents][:header], "#documents", {class: 'documents-tab', "data-toggle" => 'tab', role: 'tab', "aria-controls" => 'documents-tab'}
    %li.custom-tab.ssr_tab{role: 'presentation'}
      = link_to t(:dashboard)[:sub_service_requests][:tabs][:history][:header], "#history", {class: 'history-tab', "data-toggle" => 'tab', role: 'tab', "aria-controls" => 'history-tab'}
    %li.custom-tab.ssr_tab{role: 'presentation'}
      %a.notifications-tab{href: "#notifications", role: 'tab', 'aria-controls' => 'notifications-tab', data: {toggle: 'tab'}}
        = t(:dashboard)[:sub_service_requests][:tabs][:notifications][:header]
        %span#notification_count.badge
          = @user.unread_notification_count_for_ssr(@user, @sub_service_request)

  .tab-content
    .tab-pane#details{role: 'tabpanel', class: 'active'}
      = render partial: 'dashboard/sub_service_requests/request_details', locals: { protocol: @protocol, service_request: @service_request, sub_service_request: @sub_service_request }
    .tab-pane#study_schedule{role: 'tabpanel'}
      #per_patient_services
        = render partial: 'dashboard/sub_service_requests/per_patient_per_visit', locals: {sub_service_request: @sub_service_request, service_request: @service_request}
    .tab-pane#study_level_activities{role: 'tabpanel'}
      = render partial: 'dashboard/study_level_activities/study_level_activities_table', locals: { sub_service_request: @sub_service_request }
    .tab-pane#documents{role: 'tabpanel'}
      = render partial: 'dashboard/documents/documents_table', locals: { sub_service_request: @sub_service_request, service_request: @service_request }
    .tab-pane#history{role: 'tabpanel'}
      = render partial: 'dashboard/sub_service_requests/history/status_changes', locals: { sub_service_request_id: @sub_service_request.id }
    .tab-pane#notifications{role: 'tabpanel'}
      = render partial: 'dashboard/notifications/notifications', locals: { sub_service_request: @sub_service_request, user: @user, admin: @admin }
