%tr.header
  %th.col-sm-2.text-center.study_schedule_table_name{ colspan: 2, rowspan: 2 }
    %span{ id: "arm-name-display-#{arm.id}" }
      Service Name
  %th.col-sm-1.text-center{ rowspan: 2 }
    Status
  - if tab != 'calendar'
    %th.col-sm-2.text-center{ colspan: 2}
      Unit Costs
  - else
    %th.col-sm-1.text-center{ rowspan: 2 }
      Your Cost
    %th.col-sm-1.text-center{ rowspan: 2 }
      Clinical Qty Type
  %th.col-sm-1.text-center{ rowspan: 2 }
    N
  - if tab == 'template'
    %th.col-sm-1{ rowspan: 2 }
  %th.col-sm-5.text-center.visit_group_select{ id: "select_for_arm_#{arm.id}", colspan: 5 }
    = render partial: 'dashboard/service_calendars/visit_group_page_select', locals: { arm: arm, service_request: service_request, sub_service_request: sub_service_request, ssr_id: sub_service_request.try(:id), page: page, pages: pages, merged: merged, review: review, tab: tab, portal: portal }
  - if tab == 'calendar'
    %th.col-sm-1{ rowspan: 2 }
      Total Per Patient
    %th.col-sm-1{ rowspan: 2 }
      Total Per Study
%tr
  - if tab != 'calendar'
    %th.col-sm-1.text-center.header
      Service Rate
    %th.col-sm-1.text-center.header
      Your Cost
  = render partial: 'dashboard/service_calendars/visit_groups', locals: { service_request: service_request, arm: arm, visit_groups: visit_groups, tab: tab, portal: portal }
- if tab == 'template'
  %tr.check_visit_column_headers
    %th.col-sm-6{ colspan: 7 }
    = render partial: 'dashboard/service_calendars/check_visit_columns', locals: { visit_groups: visit_groups, tab: tab, portal: portal, service_request: service_request, sub_service_request: sub_service_request }
