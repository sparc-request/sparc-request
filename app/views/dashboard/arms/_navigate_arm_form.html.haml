.modal-dialog
  .modal-content
    .modal-header
      %button.close{type: 'button', data: {dismiss: 'modal'}}
        %span{aria: {hidden:'true'}} &times;
        %span.sr-only
          = t(:actions)[:close]
      %h4.modal-title.text-center
        = intended_action == "edit" ? t(:dashboard)[:arms][:edit] : t(:dashboard)[:arms][:remove]
    .modal-body
      #modal_errors
      .row
        .col-md-12.form-horizontal#navigate_arm_form{data: { intended_action: intended_action }}
          .form-group
            = label_tag 'arm_form_label', t(:dashboard)[:arms][:arm], class: "col-sm-4 control-label"
            .col-sm-7
              = select_tag "arm_form_select", options_from_collection_for_select(protocol_arms, 'id', 'name', arm.id), class: "selectpicker form-control"
      - if intended_action == "edit"
        %hr
          .edit_arm_area
            = render partial: 'edit_arm_form', locals: {arm: arm, sub_service_request: sub_service_request, service_request: service_request}
      -else
        .modal-footer
          .center-block
            %button.btn.btn-default{type: 'button', data: {dismiss: 'modal'}}
              = t(:actions)[:close]
            %input.btn.btn-primary#remove_arm_form_button{type: 'submit', value: t(:actions)[:remove]}