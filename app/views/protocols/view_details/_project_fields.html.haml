= stylesheet_link_tag 'view_details'

.panel.panel-primary
  .panel-heading
    %h5
      %strong
        = t(:protocols)[:projects][:information][:header]
  .panel-body
    .form-group.row
      %label.col-lg-4
        = t(:protocols)[:projects][:information][:short_title]
      .col-lg-8
        = protocol.short_title
    .form-group.row
      %label.col-lg-4
        = t(:protocols)[:projects][:information][:title]
      .col-lg-8
        = protocol.title
    .form-group.row
      %label.col-lg-4
        = t(:protocols)[:projects][:information][:funding_status]
      .col-lg-8
        = protocol.funding_status.try(&:titleize)

    /funding source
    .form-group.row
      %label.col-lg-4
        - if protocol.funding_status == "funded"
          = t(:protocols)[:projects][:information][:funding_source]
        - else
          = t(:protocols)[:projects][:information][:potential_funding_source]
      .col-lg-8
        = protocol.display_funding_source_value

    .form-group.row
      %label.col-lg-4
        = t(:protocols)[:projects][:information][:description]
      .col-lg-8
        = protocol.brief_description

    /indirect cost
    - if Setting.find_by_key("use_indirect_cost").value
      .form-group.row
        %label.col-lg-4
          = t(:protocols)[:projects][:information][:rate]
        .col-lg-8
          = protocol.indirect_cost_rate
