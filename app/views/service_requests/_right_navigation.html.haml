- if USE_FAQ_LINK
  = link_to t(:right_navigation)[:faq], FAQ_URL, class: "faq-button blue-button btn btn-primary btn-lg btn-block button-hover", target: "blank"
- else
  .faq-button.blue-button.btn.btn-primary.btn-lg.btn-block.button-hover= t(:right_navigation)[:faq]
- if USE_FEEDBACK_LINK
  = link_to t(:right_navigation)[:feedback], t(:right_navigation)[:redcap_survey], :class => "faq-button blue-button btn btn-primary btn-lg btn-block button-hover", target: '_blank'
- else
  .feedback-button.blue-button.btn.btn-primary.btn-lg.btn-block.button-hover= t(:right_navigation)[:feedback]
