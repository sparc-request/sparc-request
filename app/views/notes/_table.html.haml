- cancel ||= nil
- review ||= nil
.bootstrap-table-dropdown-overflow
  - if controller_name == 'service_requests'
    #notes-custom-toolbar
      = link_to t(:notes)[:add], new_note_path(note: { notable_id: notable_id, notable_type: notable_type }), remote: true, title: t(:proper)[:document_management][:tooltips][:notes], class: 'btn btn-success', data: { toggle: 'tooltip', delay: '{"show":"500"}' }
  %table.table-striped#notes-table{ data: { toggle: 'table', search: 'true', 'show-columns' => 'true', 'show-refresh' => 'true', 'show-toggle' => 'true', url: notes_path(format: :json, note: { notable_id: notable_id, notable_type: notable_type }, review: review, cancel: cancel), striped: "true", toolbar: "#notes-custom-toolbar" } }
    %thead.primary-header
      %tr
        %th.col-sm-2.user{ data: { align: "left", sortable: "true", field: "user" } }
          = t(:notes)[:table_fields][:user]
        %th.col-sm-2.date{ data: { align: "left", sortable: "true", field: "date", sorter: 'dateSorter' } }
          = t(:notes)[:table_fields][:date]
        %th.col-sm-6.note{ data: { align: "left", sortable: "true", field: "note" } }
          = t(:notes)[:table_fields][:note]
        %th.col-sm-2.actions{ data: { align: "center", sortable: "true", field: "actions" } }
          = t(:notes)[:table_fields][:actions]
