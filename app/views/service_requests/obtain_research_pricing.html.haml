= javascript_include_tag 'confirmation'

= render '/service_requests/navigation/steps', service_request: @service_request, sub_service_request: @sub_service_request, step_text: @step_text, css_class: @css_class
.col-sm-12.body-container#confirmation-page
  = form_tag navigate_service_request_path(@service_request) do
    = hidden_field_tag :location, ''
    = hidden_field_tag :validates, ''
    .form-group
      %p.instructions.text-danger
        = t(:proper)[:confirmation][:cost_estimate_warning]
    .form-group
      = render 'service_requests/confirmation/confirmation_details', service_request: @service_request
    .form-group.text-center
      = link_to t(:proper)[:confirmation][:download_request], service_request_path(format: :xlsx, report_type: 'request_report'), class: 'btn btn-lg btn-success'
      = link_to t(:proper)[:confirmation][:to_dashboard], Setting.get_value("dashboard_link"), class: 'btn btn-lg btn-success'
