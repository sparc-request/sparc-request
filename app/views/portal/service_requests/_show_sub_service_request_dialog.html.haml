.modal-dialog{ style: 'width: 95%;' }
  .modal-content
    = hidden_field_tag :id, @service_request.id
    = hidden_field_tag :ssr_id, @ssr_id
    .modal-header
      %button.close{ type: 'button', data: { dismiss: 'modal' } }
        %span{ aria: { hidden: 'true' } } &times;
      %h4.text-center#modal-title
        Sub Service Request
    .modal-body
      #modal_errors
      .row
        .col-lg-12
          .panel-group
            .panel.panel-default
              .panel-heading
                %h4.panel-title.pull-left= t(:protocol_information)[:information]
                .clearfix
              .panel-body
                = render partial: 'portal/protocols/summary', locals: { protocol: protocol }
            .panel.panel-default
              .panel-heading
                %h4.panel-title.pull-left
                  Users
                .clearfix
              %table.table.table-striped
                %tr
                  %th= t(:ssr_dialog)[:auth_users][:name]
                  %th= t(:ssr_dialog)[:auth_users][:role]
                  %th= t(:ssr_dialog)[:auth_users][:proxy_rights]
                - protocol.project_roles.each do |pr|
                  %tr
                    %td= pr.identity.full_name
                    %td= USER_ROLES.key(pr.role)
                    %td= PROXY_RIGHTS.key(pr.project_rights)
            .panel.panel-default
              .panel-heading
                %h4.panel-title.pull-left= t(:ssr_dialog)[:docs][:uploads]
                .clearfix
              - if sub_service_request.documents.empty?
                .panel-body
                  = render partial: 'shared/alert', locals: { message: 'No documents' }
              - else
                %table.table.table-striped
                  %tr
                    %th= t(:ssr_dialog)[:docs][:file_name]
                    %th= t(:ssr_dialog)[:docs][:program_core]
                  - sub_service_request.documents.each do |document|
                    %tr
                      %td= link_to document.document_file_name, document.document.url
                      %td= service_list[sub_service_request.organization_id][:name]
            .panel.panel-default
              .panel-heading
                %h4.panel-title.pull-left
                  Services
                .clearfix
              .panel-body
                - if @sub_service_request.has_per_patient_per_visit_services?
                  - @service_request.arms.each do |arm|
                    .calendar-container.container-fluid{ data: { arm_id: arm.id } }
                      = render partial: '/service_calendars/master_calendar/pppv/pppv_calendar', locals: { service_request: @service_request, tab: @tab, arm: arm, portal: @portal, thead_class: @thead_class }
                - if @sub_service_request.has_one_time_fee_services?
                  .calendar-container.container-fluid
                    = render partial: '/service_calendars/master_calendar/otf/otf_calendar', locals: { thead_class: @thead_class }
                - unless @sub_service_request.has_per_patient_per_visit_services? || @sub_service_request.has_one_time_fee_services?
                  = render partial: 'shared/alert', locals: { message: 'No services' }
    .modal-footer
      .center-block
        %button.btn.btn-default{ type: 'button', data: { dismiss: 'modal' } }
          Close
        %button.btn.btn-primary{ type: 'button' }
          Print


