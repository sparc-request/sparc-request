.grid_12
  %br
  %br
  #audit_form
    = form_tag billing_report_study_tracker_home_index_path(:format => :xlsx) do
      = label_tag "study_tracker_billing_report_protocol_ids[]", t(:study_tracker)[:billing_report][:protocols]
      = select_tag "study_tracker_billing_report_protocol_ids[]", options_for_select([["All (default)", "All"]] + (@protocols.map{|p| [p.display_protocol_id_and_title, p.id]}), "All"), :multiple => true
      %br
      %br

      - @cwf_organizations.each do |org|
        = label_tag "organizations[#{org.id}]", org.label
        = check_box_tag "organizations[]", org.id, true
        %br
      
      %br
      %br
     
      = label_tag :study_tracker_billing_report_start_date_input, t(:study_tracker)[:billing_report][:start_date]
      = text_field_tag :study_tracker_billing_report_start_date_input, nil
      = hidden_field_tag :study_tracker_billing_report_start_date

      %br
      %br

      = label_tag :study_tracker_billing_report_end_date_input, t(:study_tracker)[:billing_report][:end_date]
      = text_field_tag :study_tracker_billing_report_end_date_input, nil
      = hidden_field_tag :study_tracker_billing_report_end_date

      %br
      %br
      
      = submit_tag t(:study_tracker)[:billing_report][:get_report] 
  %br
  %br
