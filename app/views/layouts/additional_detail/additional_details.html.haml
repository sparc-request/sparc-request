!!! 1.1
%html{"ng-app" => "app", "xml:lang" => "en", :xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1"}/
    %title= t 'application_title'
    = stylesheet_link_tag    "additional_detail/application"
    = javascript_include_tag "additional_detail/application"
    = csrf_meta_tags
  %body
    %nav.navbar.navbar-default
      .container-fluid
        .navbar-header
          %button.navbar-toggle.collapsed{:type=>"button", "data-toggle"=>"collapse", "data-target"=>"#bs-example-navbar-collapse-1", "aria-expanded"=>"false"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => @service ? additional_detail_service_additional_details_path(@service) : "/additional_detail/"}= t(:additional_details)[:admin][:home]
        .collapse.navbar-collapse{:id=>"bs-example-navbar-collapse-1"}
          %ul.nav.navbar-nav
            %li
              %a{:href=>"/catalog_manager/"}= t(:additional_details)[:admin][:catalog_manager]
            %li
              %a{:href=>"/portal/admin"}= t(:additional_details)[:admin][:portal_admin]
            %li
              %a{:href=>"/"}= t(:additional_details)[:admin][:request_services] 
    .container-fluid
      = yield
    = javascript_include_tag "additional_detail/bootstrap-accessibility.min"