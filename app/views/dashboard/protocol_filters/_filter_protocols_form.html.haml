.panel.panel-default

  .panel-heading
    .pull-left
      Filter Protocols
    .pull-right
      = link_to 'Save', new_dashboard_protocol_filter_path, id: "save_filters_link"
      = " | "
      = link_to 'Reset', reset_filterrific_url, id: "reset_filters_link"
    .clearfix

  = form_for_filterrific filterrific, remote: true, html: { id: 'filterrific-no-ajax-auto-submit' } do |form|
    .panel-body
      #protocol_filter_form_display
        .form-group.row
          = form.label :search_query, "Search", class: 'col-lg-3 control-label'
          .col-lg-9
            = form.text_field :search_query, class: 'form-control'

        .form-group.row
          = form.label :show_archived, "Archived", class: 'col-lg-10 control-label'
          .col-lg-2
            = form.check_box :show_archived

        .form-group.row
          = form.label :with_status, "Status", class: 'col-lg-3 control-label'
          .col-lg-9
            = form.select :with_status, filterrific.select_options[:with_status], { include_blank: '- Any -' }, class: "form-control selectpicker status-select"
        - if admin
          %hr
          .form-group.row
            = form.label :for_identity_id, "My Protocols", class: 'col-lg-10 control-label'
            .col-lg-2
              = form.check_box :for_identity_id, {}, current_user.id, "0"

          .form-group.row
            = form.label :for_admin, "My Admin Organizations", class: 'col-lg-10 control-label'
            .col-lg-2
              = form.check_box :for_admin, {}, current_user.id, "0"

          .form-group.row
            = form.label :with_core, "Core", class: 'col-lg-3 control-label'
            .col-lg-9
              = form.select :with_core, filterrific.select_options[:with_core], { include_blank: '- Any -' }, class: "form-control selectpicker core-select"

    .panel-footer
      .pull-right
        %button.btn.btn-default#apply-filter-button{type: "submit"} Filter
      .clearfix


#saved_searches
  - if @protocol_filters.present?
    = render partial: 'dashboard/protocol_filters/saved_searches', locals: { current_user: current_user, protocol_filters: @protocol_filters }
