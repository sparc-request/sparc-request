- if subsidy.present?
  .panel.panel-default
    .panel-heading
      %h4.panel-title.pull-left= "Current Effective Subsidy"
      .pull-right
        %button.btn.btn-sm.btn-default.notes.list{data: { notable_type: "Subsidy", notable_id: subsidy.id }}= "Notes"
      .clearfix
    %table.table.table-condensed#approved_subsidy_table
      %thead
        %tr.default
          %th= "Request Cost at Approval"
          %th= t(:fulfillments)[:subsidies][:percent]
          %th= t(:fulfillments)[:subsidies][:pi]
          %th= "Subsidy Cost"
          %th= "Approved By"
          %th= "Approved At"
          - if admin
            %th.text-center= "Delete"
      %tbody
        %tr
          %td.request_cost
            = number_to_currency(subsidy.total_at_approval/100.0)
          %td.subsidy_percent
            = subsidy.approved_percent_of_total
          %td.subsidy_contribution
            = number_to_currency(subsidy.pi_contribution/100.0)
          %td.subsidy_effective_current_cost
            = number_to_currency(subsidy.approved_cost)
          %td.approved_by
            = subsidy.approver.try(:full_name)
          %td.approved_at
            = format_datetime(subsidy.approved_at)
          - if admin
            %td.text-center.delete_subsidy
              %button.btn.btn-sm.btn-danger.delete_subsidy_button{data: { subsidy_id: subsidy.id }}
                %span.glyphicon.glyphicon-remove
- else
  %span= "There is no current effective subsidy."
  %hr