- program.cores.where(is_available: availability).order(Arel.sql("`order`, `name`")).each do |core|
  .panel-heading.no-padding-y
    .col-sm-1.no-padding-y
      = link_to folder_glyphicon(), 'javascript:void(0)', class: "load_core_accordion", data: {core_id: core.id, show_available_only: availability[0], toggle: 'collapse', target: "#core-#{core.id}-collapse", parent: "program-#{program.id}"}
    .col-sm-11.no-padding-y
      = link_to accordion_link_text(core, !core.is_available), edit_catalog_manager_organization_path(core), class: 'org-form-label panel-title', remote: true
  .panel-collapse.collapse{ id: "core-#{core.id}-collapse" }
    .panel-body.no-padding-y.col-sm-12
      .panel-heading.no-padding-y
        .col-sm-1.no-padding-y
          = link_to plus_glyphicon(), 'javascript:void(0)', class: 'new_service_link', data: {organization_id: core.id}
        .col-sm-11.no-padding-y{style: "width:91%"}
          = link_to create_new_text(:service), 'javascript:void(0)', class: 'org-form-label panel-title new_service_link', data: {organization_id: core.id}

      %div{id: "core_accordion_#{core.id}"}
    .clearfix

- program.services.where(is_available: availability).order(Arel.sql("`order`, `name`")).each do |service|
  .panel-heading.no-padding-y
    .col-sm-1.no-padding-y
      = link_to file_glyphicon(), edit_catalog_manager_service_path(service), id: "service-#{service.id}", data: { parent: "program-#{program.id}" }, remote: true
    .col-sm-11.no-padding-y
      = link_to accordion_link_text(service, !service.is_available), edit_catalog_manager_service_path(service), class: 'org-form-label panel-title', remote: true
