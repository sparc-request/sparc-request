.devise-form
  .col-md-6.col-md-offset-3.text-center
    %h1.page-header
      = t(:devise)[:passwords][:edit][:header]
    #change-password-form
      = form_for resource, as: resource_name, url: password_path(resource_name), method: :put do |f|
        = f.hidden_field :reset_password_token, value: resource.reset_password_token
        - if resource.errors.any?
          = render 'shared/modal_errors', errors: resource.errors
        .form-group.field
          = f.label :password, t(:devise)[:passwords][:edit][:new_password]
          = f.password_field :password, class: 'form-control'
        .form-group.field
          = f.label :password_confirmation, t(:devise)[:passwords][:edit][:confirm_password]
          = f.password_field :password_confirmation, class: 'form-control'
        .form-group
          = f.submit t(:devise)[:passwords][:edit][:submit], class: 'btn btn-primary'
      .links
        = render 'devise/shared/links'
