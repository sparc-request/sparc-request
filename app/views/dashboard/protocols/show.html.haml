.panel-group#protocol_show_information_panel
  .panel.panel-primary
    .panel-heading
      %h4.panel-title.pull-left= "#{@protocol_type} Summary"
      .pull-right
        %button.btn.btn-sm.btn-default.notes.list{data: { notable_type: "Protocol", notable_id: @protocol.id }}
          = "#{@protocol_type} Notes"
        = edit_protocol_button_display(@protocol, @protocol_role)
      .clearfix
    .panel-body
      = render partial: 'dashboard/protocols/summary', locals: { protocol: @protocol }
  .panel.panel-default
    .panel-heading
      %h4.panel-title= "Authorized Users"
    .panel-body
      = render partial: 'dashboard/associated_users/table', locals: { protocol: @protocol }
  .panel.panel-default
    .panel-heading
      %h4.panel-title.pull-left= t(:protocol_information)[:service_requests]
      = consolidated_request_buttons_display(@protocol)
      .clearfix
    .panel-body
      - if @protocol.has_first_draft_service_request?
        .alert.alert-danger{ role: 'alert' } Request in progress.
      - elsif !@protocol.service_requests.present?
        %button.btn.btn-success.btn-sm{ type: 'button', data: { permission: @permission_to_edit.to_s } }
          = t(:protocol_information)[:add_services]
      - else
        - @protocol.service_requests.each do |sr|
          - next if sr.status == "first_draft"
          = render partial: 'dashboard/service_requests/protocol_service_request_show', locals: { service_request: sr }
