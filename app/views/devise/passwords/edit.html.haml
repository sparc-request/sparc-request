%h1.text-center.mb-4
  = t('devise.passwords.edit.header')
= form_for resource, as: resource_name, url: password_path(resource_name), method: :put, remote: true do |f|
  = f.hidden_field :reset_password_token, value: resource.reset_password_token
  .form-group
    = f.label :password, t('devise.passwords.edit.new_password'), class: 'required'
    = f.password_field :password, autofocus: true, autocomplete: 'off', class: 'form-control'
    - if @minimum_password_length
      %small.form-text.text-muted
        = t('devise.min_password_length', min_length: @minimum_password_length)
  .form-group
    = f.label :password_confirmation, t('devise.passwords.edit.confirm_password'), class: 'required'
    = f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control'
  .form-group
    = f.submit t('devise.passwords.edit.submit'), class: 'btn btn-lg btn-block btn-outline-primary'
= render 'devise/shared/links'
.form-group.mb-0
  = link_to t('devise.back_to_catalog'), root_path, class: 'btn btn-lg btn-block btn-secondary'
