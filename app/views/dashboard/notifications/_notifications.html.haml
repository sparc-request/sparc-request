- sub_service_request ||= nil

.card.w-100#notifications
  .card-body
    .row
      .col-2#notification_tabs{data: {selected: "inbox"}}
        - if sub_service_request
          = render "dashboard/notifications/dropdown", sub_service_request: sub_service_request
          %hr
        %nav.nav.nav-pills.flex-column.list-group.list-group-flush{ role: 'tablist' }
          .list-group-item.p-0
            = link_to dashboard_notifications_path(table: 'inbox', ssrid: sub_service_request.try(:id)), remote: true, class: ['nav-link text-center', table == 'inbox' ? 'active' : ''], id: 'notificationsInbox', role: 'tab', data: { toggle: 'tab' }, aria: { controls: 'notificationsInboxTab', selected: (table == 'inbox').to_s } do
              = succeed t(:dashboard)[:notifications][:table][:inbox] do
                = icon('fas', 'inbox mr-2')
          .list-group-item.p-0
            = link_to dashboard_notifications_path(table: 'sent', ssrid: sub_service_request.try(:id)), remote: true, class: ['nav-link text-center', table == 'sent' ? 'active' : ''], id: 'notificationsSent', role: 'tab', data: { toggle: 'tab' }, aria: { controls: 'notificationsSentTab', selected: (table == 'sent').to_s } do
              = succeed t(:dashboard)[:notifications][:table][:sent] do
                = icon('fas', 'paper-plane mr-2')
      .tab-content.col-10.pl-0
        .tab-pane.fade#notificationsInboxTab{ role: 'tabpanel', class: table == 'inbox' ? 'show active' : '', aria: { labelledby: 'notificationsInbox' } }
          - if table == 'inbox'
            = render 'dashboard/notifications/table', sub_service_request: sub_service_request, table: table
        .tab-pane.fade#notificationsSentTab{ role: 'tabpanel', class: table == 'sent' ? 'show active' : '', aria: { labelledby: 'notificationsSent' } }
          - if table == 'sent'
            = render 'dashboard/notifications/table', sub_service_request: sub_service_request, table: table
