%tr
  %th.service-name.text-center{ colspan: 9, rowspan: 2 }
    = LineItem.human_attribute_name(:service)
  %th.notes.text-center{ colspan: 2, rowspan: 2 }
    %span{ title: t(:calendars)[:tooltips][:line_item_notes], data: { toggle: 'tooltip' } }
      = Note.model_name.plural.capitalize
  %th.status.text-center{ colspan: 3, rowspan: 2 }
    %span{ title: t(:calendars)[:tooltips][:pppv_status], data: { toggle: 'tooltip' } }
      = LineItem.human_attribute_name(:status)
  %th.unit-cost.text-center{ colspan: 6 }
    = LineItem.human_attribute_name(:unit_costs)

  - unless in_dashboard?
    %th.unit-type.text-center{ colspan: 4, rowspan: 2 }
      %span{ title: t(:calendars)[:tooltips][:quantity_type], data: { toggle: 'tooltip' } }
        = raw LineItem.human_attribute_name(:clinical_quantity_type).sub(' ', '<br>')

  %th.subject-count.text-center{ colspan: 2, rowspan: 2 }
    %span{ title: t(:calendars)[:tooltips][:subject_count], data: { toggle: 'tooltip' } }
      = t(:calendars)[:pppv][:header_fields][:subject_count]
  %th{ colspan: 2, rowspan: 2 }
  %th.visit-group-select.text-center{ colspan: 15 }
    = render 'service_calendars/master_calendar/pppv/visit_group_page_select', service_request: service_request, sub_service_request: sub_service_request, arm: arm, tab: tab, page: page, pages: pages, merged: merged, consolidated: consolidated

  - unless in_dashboard?
    %th.total-per-patient.text-center{ colspan: 4, rowspan: 2 }
      = raw t(:calendars)[:pppv][:header_fields][:total_per_patient]
    %th.total-per-study.text-center{ colspan: 4, rowspan: 2 }
      = raw t(:calendars)[:pppv][:header_fields][:total_per_study]

%tr
  %th.service-rate.text-center{ colspan: 3 }
    %span{ title: t(:calendars)[:tooltips][:service_rate], data: { toggle: 'tooltip' } }
      = raw LineItem.human_attribute_name(:service_rate).gsub(' ', '<br>')
  %th.your-cost.text-center{ colspan: 3 }
    %span{ title: t(:calendars)[:tooltips][:your_cost], data: { toggle: 'tooltip' } }
      = raw LineItem.human_attribute_name(:displayed_cost).gsub(' ', '<br>')
  = render 'service_calendars/master_calendar/pppv/visit_groups', service_request: service_request, sub_service_request: sub_service_request, visit_groups: visit_groups, page: page, pages: pages, tab: tab, merged: merged

%tr.check-visits-row
  %th{ colspan: in_dashboard? ? 24 : 28 }
  = render 'service_calendars/master_calendar/pppv/check_visit_columns', service_request: service_request, sub_service_request: sub_service_request, arm: arm, visit_groups: visit_groups, page: page

  -unless in_dashboard?
    %th{ colspan: 8 }
