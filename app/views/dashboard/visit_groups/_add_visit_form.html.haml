.modal-dialog
  .modal-content
    = form_for visit_group, {remote: true, url: dashboard_visit_groups_path(visit_group), html: {class: "form-horizontal new_visit", role: "form"}} do |a|
      .modal-header
        %button.close{type: 'button', data: {dismiss: 'modal'}}
          %span{aria: {hidden:'true'}} &times;
          %span.sr-only &times;
        %h4.modal-title.text-center
          = t(:dashboard)[:visit_groups][:add_visit]
      .modal-body
        #modal_errors
        .row
          = hidden_field_tag :schedule_tab, schedule_tab
          = hidden_field_tag :current_page, current_page
          = hidden_field_tag :service_request_id, service_request.id
          = hidden_field_tag :sub_service_request_id, sub_service_request.id
          = hidden_field_tag :study_tracker, study_tracker
          .col-md-12
            .form-group
              = a.label "arm_id", t(:dashboard)[:visit_groups][:arm], class: "col-sm-4 control-label"
              .col-sm-7
                = a.select "arm_id", options_from_collection_for_select(protocol.arms,'id','name', arm.id), {include_blank: false}, class: "form-control selectpicker"
            .form-group
              = a.label "name", t(:dashboard)[:visit_groups][:name], class: "col-sm-4 control-label"
              .col-sm-7= a.text_field "name", {class: 'form-control'}
            .form-group
              = a.label "day", t(:dashboard)[:visit_groups][:day], class: "col-sm-4 control-label"
              .col-sm-7
                = a.text_field "day", {class: 'form-control', maxlength: 4}
            .form-group
              = a.label "position", t(:dashboard)[:visit_groups][:position], class: "col-sm-4 control-label"
              .col-sm-7
                = a.select "position", options_from_collection_for_select(arm.visit_groups, 'position', 'insertion_name'), {include_blank: 'add as last'}, :class => "form-control selectpicker"
            .form-group
              = a.label "window_before", t(:dashboard)[:visit_groups][:window_before], class: "col-sm-4 control-label"
              .col-sm-7
                = a.text_field "window_before", {class: 'form-control'}
            .form-group
              = a.label "window_after", t(:dashboard)[:visit_groups][:window_after], class: "col-sm-4 control-label"
              .col-sm-7
                = a.text_field "window_after", {class: 'form-control'}
      .modal-footer
        .center-block
          %button.btn.btn-default{type: 'button', data: {dismiss: 'modal'}}
            = t(:actions)[:close]
          %input.btn.btn-primary#add_visit_group_form_button{type: 'submit', value: t(:actions)[:add]}
