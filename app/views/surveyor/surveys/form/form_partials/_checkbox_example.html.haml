- question.options.each do |option|
  .form-group
    .form-check.option.d-flex.align-items-center{ data: { option_id: option.id } }
      = check_box_tag :response_example, '', false, class: 'checkbox-example form-check-input mt-0', disabled: true
      = text_field_tag "option-#{option.id}-content", option.content, class: 'form-control form-check-label w-75 mr-2', placeholder: t(:surveyor)[:surveys][:form][:placeholders][:option][:content]
      = render 'surveyor/surveys/form/form_partials/delete_option_button', option: option

.form-group
  = render 'surveyor/surveys/form/form_partials/add_option_button', question: question
