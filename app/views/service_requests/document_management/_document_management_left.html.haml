.col-md-9
  .document_upload_instructions= t("documents.upload_instructions_html")
  .document-management-container
    = render :partial => 'document_list', :locals => {:review => false, :thead_class => 'orange-provider'}
    .clear
    %br
    %br

    %td= link_to t("documents.add_button"), "/service_requests/#{service_request.id}/new_document", :remote => true, :class => "document_upload_button blue-button btn btn-primary btn-lg button-hover", :location => 'document_management'

    .document_upload{:style=>'display:none'}
      = render :partial => 'document_form', :locals => {:provider_css => 'orange-provider'}
    .clear

  .service_request_notes
    #request_notes_table
      = render partial: '/notes/request_notes', locals: { notes: service_request.notes, notable_id: service_request.id, notable_type: "ServiceRequest", thead_class: "orange-provider"  }

    %br
    %br

    %a.new_request_note_button.button-hover.blue-button= "Add Note"
    #note_form{style: 'display:none'}= render partial: '/notes/note_form', locals: { service_request: service_request }
    .clear