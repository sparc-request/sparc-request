= form_for [:dashboard, message], {remote: true, html: {class: 'form', role: 'form'}} do |form|
  = form.hidden_field :notification_id
  = form.hidden_field :to
  = form.hidden_field :from
  = form.hidden_field :email
  .form-group.row
    = form.label 'body', 'Response:', class: 'col-sm-3 control-label'
    .col-sm-6
      = form.text_area :body, { class: 'form-control', rows: 6 }
  .form-group.row
    .col-sm-1.col-sm-offset-3
      %input.btn.btn-primary{type: 'submit', value: t(:actions)[:send]}
    .col-sm-1
      %button.btn.btn-default{type: 'button', data: {dismiss: 'modal'}}
        = t(:actions)[:cancel]
