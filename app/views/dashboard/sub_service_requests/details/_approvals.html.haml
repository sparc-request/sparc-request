= fields_for sub_service_request do |f|
  .form-row
    .form-group.col-3
      .custom-control.custom-checkbox.custom-control-lg.custom-control-inline<>
        = f.check_box :nursing_nutrition_approved, { class: 'custom-control-input approval-check', disabled: sub_service_request.nursing_nutrition_approved? }
        = f.label :nursing_nutrition_approved, class: 'custom-control-label'
    .form-group.col-3
      .custom-control.custom-checkbox.custom-control-lg.custom-control-inline<>
        = f.check_box :lab_approved, { class: 'custom-control-input approval-check', disabled: sub_service_request.lab_approved? }
        = f.label :lab_approved, class: 'custom-control-label'
    .form-group.col-3
      .custom-control.custom-checkbox.custom-control-lg.custom-control-inline<>
        = f.check_box :imaging_approved, { class: 'custom-control-input approval-check', disabled: sub_service_request.imaging_approved? }
        = f.label :imaging_approved, class: 'custom-control-label'
    .form-group.col-3
      .custom-control.custom-checkbox.custom-control-lg.custom-control-inline.mr-0<>
        = f.check_box :committee_approved, { class: 'custom-control-input approval-check', disabled: sub_service_request.committee_approved? }
        = f.label :committee_approved, class: 'custom-control-label'