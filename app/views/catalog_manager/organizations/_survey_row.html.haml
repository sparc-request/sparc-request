.row.form_row{ id: "survey-row-#{associated_survey.id}"}
  .col-sm-8
    = link_to "#{associated_survey.survey.title} - Version #{associated_survey.survey.version}", surveyor_survey_preview_path(associated_survey.survey, format: :html), target: 'blank', class: 'associated_survey_link', data: {id: associated_survey.id}
  .col-sm-4.text-center
    %button.btn.btn-xs.btn-danger.remove-associated-survey{ data: {id: organization.id, survey_id: associated_survey.id}}
      %span.glyphicon.glyphicon-remove
