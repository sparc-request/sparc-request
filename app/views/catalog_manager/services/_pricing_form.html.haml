- if (service.organization.parents << service.organization).detect{|org| !org.pricing_setups.empty?}
  %button#new_pricing_map_link.btn.btn-info{data: {service_id: service.id}}
    = t(:catalog_manager)[:service_form][:pricing_map_form][:add_pricing]

-else
  %button#new_pricing_map_link.btn.btn-info.disabled
    = t(:catalog_manager)[:service_form][:pricing_map_form][:add_pricing]
  %span= t(:catalog_manager)[:service_form][:pricing_map_form][:no_pricing_setups]

#pricing_map_list
  - pricing_maps = service.pricing_maps.order(effective_date: :desc)
  - pricing_maps[0..2].each do |pricing_map|
    = render "/catalog_manager/services/pricing_map", pricing_map: pricing_map
  - if pricing_maps.length > 3
    = link_to t(:constants)[:more], "#service#{service.id}PricingMapsExpand", class: 'btn btn-primary collapsed', alt: t(:constants)[:less], data: { toggle: 'collapse' }, aria: { expanded: 'false' }
    .collapse{ id: "service#{service.id}PricingMapsExpand" }
      - pricing_maps[3..-1].each do |pricing_map|
        = render "/catalog_manager/services/pricing_map", pricing_map: pricing_map
