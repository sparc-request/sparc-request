%tr
  %th.text-center{ class: portal ? "portal-consolidated-service-header" : "consolidated-service-header", colspan: 2, rowspan: 2 }
    = t(:calendars)[:pppv][:header_fields][:service]
  %th.text-center.notes-width{ rowspan: 2 }
    %span{ title: t(:calendars)[:tooltips][:line_item_notes], data: { toggle: 'tooltip', placement: 'top', delay: '{"show":"500"}' } }
      = t(:calendars)[:pppv][:header_fields][:notes]
  %th.text-center.status-width{ rowspan: 2 }
    %span{ title: t(:calendars)[:tooltips][:pppv_status], data: { toggle: 'tooltip', placement: 'top', delay: '{"show":"500"}' } }
      = t(:calendars)[:pppv][:header_fields][:status]
  %th.text-center.unit-cost-width{ colspan: 2 }
    = t(:calendars)[:pppv][:header_fields][:unit_cost]
  %th.text-center.quantity-type-width{ rowspan: 2 }
    %span{ title: t(:calendars)[:tooltips][:quantity_type], data: { toggle: 'tooltip', placement: 'top', delay: '{"show":"500"}' } }
      = t(:calendars)[:pppv][:header_fields][:quantity_type]
  %th.text-center.xs-col-width{ rowspan: 2 }
    %span{ title: t(:calendars)[:tooltips][:subject_count], data: { toggle: 'tooltip', placement: 'top', delay: '{"show":"500"}' } }
      = t(:calendars)[:pppv][:header_fields][:subject_count]
  %th.text-center.visit-group-select{ colspan: 5, class: @display_all_services ? 'display_all_services' : '' }
    = render 'service_calendars/master_calendar/pppv/visit_group_page_select', service_request: service_request, sub_service_request: sub_service_request, arm: arm, tab: tab, page: page, pages: pages, review: review, portal: portal, admin: admin, merged: merged, consolidated: consolidated, statuses_hidden: statuses_hidden
  %th.text-center.total-width{ rowspan: 2 }
    = t(:calendars)[:pppv][:header_fields][:total_per_patient]
  %th.text-center.total-width{ rowspan: 2 }
    = t(:calendars)[:pppv][:header_fields][:total_per_study]

%tr
  %th.text-center.sm-col-width
    %span{ title: t(:calendars)[:tooltips][:service_rate], data: { toggle: 'tooltip', placement: 'top', delay: '{"show":"500"}' } }
      = raw(t(:calendars)[:pppv][:header_fields][:service_rate])
  %th.text-center.sm-col-width
    %span{ title: t(:calendars)[:tooltips][:your_cost], data: { toggle: 'tooltip', placement: 'top', delay: '{"show":"500"}' } }
      = raw(t(:calendars)[:pppv][:header_fields][:your_cost])
  = render 'service_calendars/master_calendar/pppv/visit_groups', visit_groups: arm.visit_groups.page(page), page: page, pages: pages, tab: tab, portal: portal, admin: admin, review: review, merged: merged, consolidated: consolidated, statuses_hidden: statuses_hidden
