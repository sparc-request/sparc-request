.modal-dialog.modal-md
  = form_for @visit_group, remote: true, url: visit_group_path(@visit_group, srid: params[:srid], sub_service_request_id: params[:sub_service_request_id], page: params[:page], pages: params[:pages], tab: params[:tab], portal: params[:portal], admin: params[:admin], review: params[:review], merged: params[:merged], consolidated: params[:consolidated], statuses_hidden: params[:statuses_hidden]), html: { method: 'put', class: 'modal-content form-horizontal visit-group-form' } do |f|
    .modal-header
      %button.close{type: 'button', data: {dismiss: 'modal'}}
        %span{aria: {hidden:'true'}} &times;
        %span.sr-only &times;
      %h4.modal-title.text-center
        Edit Visit
    .modal-body
      #modal_errors
      .form-group
        = f.label :name, 'Visit Name', class: 'col-sm-4 control-label'
        .col-sm-8
          = f.text_field :name, class: 'form-control'
      .form-group
        = f.label :day, 'Visit Day', class: 'col-sm-4 control-label'
        .col-sm-8
          = f.text_field :day, class: 'form-control'
      .form-group
        = f.label :window_before, 'Edit Window Before Visit', class: 'col-sm-4 control-label'
        .col-sm-8
          = f.text_field :window_before, class: 'form-control'
      .form-group
        = f.label :window_after, 'Edit Window After Visit', class: 'col-sm-4 control-label'
        .col-sm-8
          = f.text_field :window_after, class: 'form-control'
    .modal-footer
      %button.btn.btn-default{ type: 'button', data: { dismiss: 'modal' } }
        Close
      = f.submit 'Save changes', class: 'btn btn-primary'

