%tr.header-top
  %th.col-sm-2.text-center{ colspan: 2, rowspan: 2 }
    = t(:calendars)[:pppv][:header_fields][:service]

  - if tab == 'calendar'
    %th.col-sm-1.text-center{ rowspan: 2 }
      = t(:calendars)[:pppv][:header_fields][:status]
    %th.col-sm-1.text-center{ rowspan: 2 }
      = raw(t(:calendars)[:pppv][:header_fields][:your_cost])
    %th.col-sm-1.text-center{ rowspan: 2 }
      = t(:calendars)[:pppv][:header_fields][:quantity_type]
  - else
    %th.col-sm-2.text-center{ colspan: 2 }
      = t(:calendars)[:pppv][:header_fields][:unit_cost]

  %th.col-sm-1.text-center{ rowspan: 2 }
    = t(:calendars)[:pppv][:header_fields][:subject_count]

  - if tab == 'template'
    %th.col-sm-1{ rowspan: 2 }

  %th.col-sm-5.text-center.visit-group-select{ colspan: 5 }
    = render 'dashboard/service_calendars/visit_group_page_select', arm: arm, service_request: service_request, sub_service_request: sub_service_request, page: page, pages: pages, merged: merged, review: review, tab: tab, portal: portal

  - if tab == 'calendar'
    %th.col-sm-1.text-center{ rowspan: 2 }
      = t(:calendars)[:pppv][:header_fields][:total_per_patient]
    %th.col-sm-1.text-center{ rowspan: 2 }
      = t(:calendars)[:pppv][:header_fields][:total_per_study]



%tr.header-bottom
  - unless tab == 'calendar'
    %th.col-sm-1.text-center
      = t(:calendars)[:pppv][:header_fields][:service_rate]
    %th.col-sm-1.text-center
      = raw(t(:calendars)[:pppv][:header_fields][:your_cost])
  = render 'dashboard/service_calendars/visit_groups', service_request: service_request, arm: arm, visit_groups: visit_groups, tab: tab



- if tab == 'template'
  %tr
    %th.col-sm-6{ colspan: 6 }
    = render 'dashboard/service_calendars/check_visit_columns', visit_groups: visit_groups, tab: tab, portal: portal, service_request: service_request, sub_service_request: sub_service_request
