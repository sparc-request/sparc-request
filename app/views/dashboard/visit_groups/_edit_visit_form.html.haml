= form_for visit_group, {remote: true, url: dashboard_visit_group_path(visit_group), html: {class: "form-horizontal", id: "edit_visit_group", role: "form"}} do |a|
  = hidden_field_tag :service_request_id, service_request.id
  = hidden_field_tag :sub_service_request_id, sub_service_request.id
  .form-group
    = a.label "name", t(:dashboard)[:visit_groups][:name], class: "col-sm-4 control-label"
    .col-sm-7
      = a.text_field "name", {class: 'form-control'}
  .form-group
    = a.label "day", t(:dashboard)[:visit_groups][:day], class: "col-sm-4 control-label"
    .col-sm-7
      = a.text_field "day", {class: 'form-control', maxlength: 4}
  .form-group
    = a.label "window_before", t(:dashboard)[:visit_groups][:window_before], class: "col-sm-4 control-label"
    .col-sm-7
      = a.text_field "window_before", {class: 'form-control'}
  .form-group
    = a.label "window_after", t(:dashboard)[:visit_groups][:window_after], class: "col-sm-4 control-label"
    .col-sm-7
      = a.text_field "window_after", {class: 'form-control'}
  .modal-footer
    .center-block
      %button.btn.btn-default{type: 'button', data: {dismiss: 'modal'}}
        = t(:actions)[:close]
      %input.btn.btn-primary#edit_visit_group_form_button{type: 'submit', value: t(:actions)[:save]}
