- if current_user.is_site_admin?
  .card.w-100#surveysCard
    .card-header.bg-primary.text-white{ title: t(:surveyor)[:systemsurveys][:tooltip], data: { toggle: 'tooltip', placement: 'left' } }
      %h3.mb-0
        = t(:surveyor)[:systemsurveys][:header]
    #surveysCustomToolbar
      = link_to t(:surveyor)[:systemsurveys][:new], new_surveyor_survey_path(type: 'SystemSurvey'), remote: true, class: "btn btn-success", id: "new-survey-button"
    %table.system-survey-table{ data: { toggle: 'table', search: 'true', 'show-columns' => 'true', 'show-refresh' => 'true', 'show-toggle' => 'true', url: surveyor_surveys_path(type: 'SystemSurvey'), striped: 'true', toolbar: '#surveysCustomToolbar', pagination: 'true', page_size: '20' } }
      %thead.primary-header
        %tr
          %th{ data: { field: "title", align: "left", sortable: 'true' } }
            = t(:surveyor)[:systemsurveys][:table][:headers][:title]
          %th{ data: { field: "access_code", align: "left", sortable: 'true' } }
            = t(:surveyor)[:systemsurveys][:table][:headers][:access_code]
          %th{ data: { field: "version", align: "left", sortable: 'true' } }
            = t(:surveyor)[:systemsurveys][:table][:headers][:version]
          %th{ data: { field: "active", align: "center" } }
            = t(:surveyor)[:systemsurveys][:table][:headers][:active]
          %th{ data: { field: "actions", align: "center" } }
            = t(:surveyor)[:systemsurveys][:table][:headers][:actions]

- if current_user.is_site_admin? || current_user.is_super_user? || current_user.is_service_provider? || current_user.is_catalog_manager?
  .card.w-100#formsCard
    .card-header.bg-primary.text-white{ title: t(:surveyor)[:forms][:tooltip], data: { toggle: 'tooltip', placement: 'left' } }
      %h3.mb-0
        = t(:surveyor)[:forms][:header]
    #formsCustomToolbar
      = link_to t(:surveyor)[:forms][:new], new_surveyor_survey_path(type: 'Form'), remote: true, class: "btn btn-success", id: "new-form-button"
    %table.form-table{ data: { toggle: 'table', search: 'true', 'show-columns' => 'true', 'show-refresh' => 'true', 'show-toggle' => 'true', url: surveyor_surveys_path(type: 'Form'), striped: 'true', toolbar: '#formsCustomToolbar', pagination: 'true', page_size: '20' } }
      %thead.primary-header
        %tr
          %th{ data: { field: "surveyable", align: "left", sortable: 'true' } }
            = t(:surveyor)[:forms][:table][:headers][:surveyable]
          %th{ data: { field: "title", align: "left", sortable: 'true' } }
            = t(:surveyor)[:forms][:table][:headers][:title]
          %th{ data: { field: "access_code", align: "left", sortable: 'true' } }
            = t(:surveyor)[:forms][:table][:headers][:access_code]
          %th{ data: { field: "version", align: "left", sortable: 'true' } }
            = t(:surveyor)[:forms][:table][:headers][:version]
          %th{ data: { field: "active", align: "center" } }
            = t(:surveyor)[:forms][:table][:headers][:active]
          %th{ data: { field: "actions", align: "center" } }
            = t(:surveyor)[:forms][:table][:headers][:actions]
