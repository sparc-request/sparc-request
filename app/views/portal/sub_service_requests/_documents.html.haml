= javascript_include_tag 'portal/document_management'

#upload_message{:style => 'display:none'}
  = t("documents.upload_message")

= form_tag new_document_portal_admin_sub_service_request_path(@sub_service_request), {:id => 'new_document_form', :class => 'root-view', :multipart => true} do
  = hidden_field_tag :location, ''
  = hidden_field_tag :validates, ''
  = render :partial => "errors"
  .clear
  %div
    .document-management-container
      %table
        %thead
          %tr
            %th.blue_header= t(:additional_details)[:portal_admin][:label]
        %tbody
          - @sub_service_request.line_items.each do |line_item|
            %tr
              %td
                %a{:style => "text-decoration: underline;", :href => additional_detail_service_additional_details_path(line_item.service)}=line_item.additional_detail_breadcrumb 
                %ul
                  - line_item.additional_details_form_data_hash.each do |key, value|
                    %li
                      %strong=key + ":"
                      %span=value
      %br
      %br
      = render :partial => 'portal/sub_service_requests/document_list', :locals => {:review => false}
      .clear
      %br
      %br
      
      %td= link_to t("documents.add_button"), "javascript:void(0)", :class => "document_upload_button", :location => 'document_management'

      .document_upload{:style=>'display:none'}
        = render :partial => 'document_form'
      .clear
      %br
      %br

      %div{:style => 'text-align:left; margin: 0 0 10px 45px;'}= t("documents.admin_instructions")
      = text_area_tag 'service_request_notes', @service_request.notes, :'data-service_request_id' => @service_request.id, :class => 'fulfillment_data', :rows => 14, :cols => 117

      %br
      %br

      %div 

  .clear
