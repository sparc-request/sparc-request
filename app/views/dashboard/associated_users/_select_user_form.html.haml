.modal-dialog#add-authorized-user-form
  .modal-content
    .modal-header
      %button.close{ type: 'button', data: { dismiss: 'modal' } }
        %span{ aria: { hidden: 'true' } } &times;
      %h4.text-center#modal-title
        = header_text
    .modal-body
      #modal_errors
      .row
        .col-lg-12
          %label.col-lg-3.control-label
            = t(:dashboard)[:authorized_users][:add][:select]
          .col-lg-9
            = text_field_tag 'authorized_user_search', "", placeholder: t(:constants)[:prompts][:search_for_user], class: 'form-control', data: {protocol_id: protocol.id}
            = image_tag 'spinner.gif', id: 'loading_authorized_user_spinner', class: 'hidden'
    .modal-footer
      .center-block
        %button.btn.btn-default{ type: 'button', data: { dismiss: 'modal' } }
          = t(:actions)[:close]
