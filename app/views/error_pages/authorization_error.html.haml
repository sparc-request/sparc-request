.col-12.col-xl-8.py-5.my-5.mx-auto
  .card
    .card-body.p-5.text-center
      %h1.mb-5
        = t('error_pages.authorization_error.header')
      %h4.alert.alert-danger.mb-5
        = raw(@error)
      %h4.text-muted
        = raw t('error_pages.help_text', email: link_to(Setting.get_value('contact_us_cc'), "mailto#{Setting.get_value('contact_us_cc')}"), phone: link_to(Setting.get_value('contact_us_phone'), "mailto#{Setting.get_value('contact_us_phone')}"))
      - if current_user
        = link_to t('error_pages.dashboard_link'), dashboard_root_path, class: 'btn btn-lg btn-success mt-5'
