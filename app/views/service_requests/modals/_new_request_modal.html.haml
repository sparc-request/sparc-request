#new-request-modal.hidden
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{ type: 'button', data: { dismiss: 'modal' } }
          %span{ aria: { hidden: 'true' } } &times;
        %h4.text-center#modal-title
          = t(:proper)[:catalog][:new_request][:header]
      .modal-body
        #modal_errors
        .form-group.text-center
          = t(:proper)[:catalog][:new_request][:warning]
      .modal-footer
        .center-block
          %a.btn.btn-success.same-size-button.pull-left.yes-button{ data: { dismiss: 'modal' } }
            = raw(t(:proper)[:catalog][:new_request][:yes_button])
          %a.btn.btn-danger.same-size-button.pull-right{ href: Setting.get_value("dashboard_link") }
            = raw(t(:proper)[:catalog][:new_request][:no_button])
