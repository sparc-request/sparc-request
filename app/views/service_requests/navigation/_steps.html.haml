- subsidy, klass = calculate_step_params(service_request)
- unless ['obtain_research_pricing', 'confirmation'].include?(action_name)
  .col-sm-12.no-padding.steps
    .container-fluid.no-padding
      .steps-banner-container
        %ul.no-padding.no-margin#steps-banner
          %li{ class: klass }
            = step_nav_button t(:proper)[:navigation][:steps][:step1], 'blue', catalog_service_request_path(srid: service_request.id)
          %li{ class: klass }
            = step_nav_button t(:proper)[:navigation][:steps][:step2], 'blue-green', protocol_service_request_path(srid: service_request.id)
          %li{ class: klass }
            = step_nav_button t(:proper)[:navigation][:steps][:step3], 'green', service_details_service_request_path(srid: service_request.id)
          %li{ class: klass }
            = step_nav_button t(:proper)[:navigation][:steps][:step4], 'light-blue', service_calendar_service_request_path(srid: service_request.id)
          - if subsidy
            %li{ class: klass }
              = step_nav_button t(:proper)[:navigation][:steps][:step4a], 'pink', service_subsidy_service_request_path(srid: service_request.id)
          %li{ class: klass }
            = step_nav_button t(:proper)[:navigation][:steps][:step5], 'orange', document_management_service_request_path(srid: service_request.id)
          %li{ class: klass }
            = step_nav_button t(:proper)[:navigation][:steps][:step6], 'red', review_service_request_path(srid: service_request.id)

.col-sm-12.ui-corner-all.step-header{ class: css_class }
  .col-sm-6.no-padding
    %h4
      = step_text
  .col-sm-6.no-padding.text-right
    %h4
      = protocol_id_display(service_request)
