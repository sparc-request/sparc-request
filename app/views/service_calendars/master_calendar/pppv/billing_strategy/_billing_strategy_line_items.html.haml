- line_items_visits = []
- Dashboard::ServiceCalendars.pppv_line_items_visits_to_display(arm, service_request, sub_service_request, merged: merged, statuses_hidden: statuses_hidden).each do |sub_service_request_id, livs|
  - line_items_visits << livs
  - ssr    = SubServiceRequest.find(sub_service_request_id)
  - locked = !ssr.can_be_edited? && !admin

  -# SSR Header Row
  %tr.organization-header{ class: locked ? 'text-danger' : '' }
    %th{ colspan: portal ? 7 : 8, class: portal ? "billing-organization-header-start-width-portal" : "billing-organization-header-start-width" }
      = display_org_name(Dashboard::ServiceCalendars.display_organization_hierarchy(livs[0]), ssr, locked)
    - visit_groups.each do
      %th.billing-type-list.text-center.visit-width
        .row
          .col-xs-4.billing-type.no-padding{ data: { toggle: 'tooltip', animation: 'false', title: t(:proper)[:service_calendar][:tooltips][:r] } }
            = t(:calendars)[:pppv][:header_fields][:research]
          .col-xs-4.billing-type.no-padding{ data: { toggle: 'tooltip', animation: 'false', title: t(:proper)[:service_calendar][:tooltips][:t] } }
            = t(:calendars)[:pppv][:header_fields][:third_party]
          .col-xs-4.billing-type.no-padding{ data: { toggle: 'tooltip', animation: 'false', title: t(:proper)[:service_calendar][:tooltips][:effort] } }
            = t(:calendars)[:pppv][:header_fields][:percent]
    - (VisitGroup.per_page - visit_groups.size).times do
      %th.visit-width &nbsp;

    - unless portal
      %th.billing-organization-header-end-width{ colspan: 2 }

  -# Line Item Visits
  - livs.each do |liv|
    %tr.pppv-line-item-row{ class: locked ? 'bg-danger text-danger' : '' }
      %td.service-name{ colspan: 2 }
        = liv.service.display_service_name
      %td.notes.text-center.notes-width
        = display_liv_notes(liv, @portal)
      %td.status.text-center.status-width
        = AVAILABLE_STATUSES[ssr.status]
      %td.service-rate.text-center.sm-col-width
        = display_service_rate(liv.line_item)
      %td.your-cost.text-center.sm-col-width
        - if portal
          %a.edit-your-cost{ href: 'javascript:void(0)', data: { name: 'displayed_cost', title: t(:calendars)[:pppv][:editable_fields][:your_cost], value: number_with_precision(Service.cents_to_dollars(liv.line_item.applicable_rate), precision: 2), id: liv.line_item.id, url: dashboard_line_item_path(liv.line_item) } }
        - else
          = "$#{number_with_precision(Service.cents_to_dollars(liv.line_item.applicable_rate), precision: 2)}"

      - unless portal
        %td.unit-type.text-center.unit-type-width
          = display_unit_type(liv)

      %td.subject-count.text-center.xs-col-width
        - if locked
          = liv.subject_count
        - else
          %a.edit-subject-count{ href: 'javascript:void(0)', data: { arm_id: arm.id, name: 'subject_count', title: t(:calendars)[:pppv][:editable_fields][:subject_count], value: liv.subject_count, url: dashboard_line_items_visit_path(liv, srid: service_request.id, portal: @portal) } }
      - visits = liv.ordered_visits.paginate(page: page.to_i, per_page: Visit.per_page)
      - visits.each_with_index do |v, index|
        %td.text-center.visit.visit-width{ class: "visit-#{v.id}" }
          = render "service_calendars/master_calendar/pppv/#{tab}/#{tab}_visit_input", visit: v, page: page, admin: admin, locked: locked
      - (Visit.per_page - visits.size).times do
        %td.visit-width &nbsp;

      - unless portal
        = render 'service_calendars/master_calendar/pppv/total_per_patient', liv: liv
        = render 'service_calendars/master_calendar/pppv/total_per_study', liv: liv

- unless portal
  = render 'service_calendars/master_calendar/pppv/totals/pppv_totals', service_request: service_request, arm: arm, tab: tab, line_items_visits: line_items_visits.flatten, page: page
