.modal-dialog
  .modal-content
    = form_for arm, {remote: true, url: dashboard_arms_path(arm), html: {class: "form-horizontal", role: "form"}} do |a|
      .modal-header
        %button.close{type: 'button', data: {dismiss: 'modal'}}
          %span{aria: {hidden:'true'}} &times;
          %span.sr-only &times;
        %h4#add_arm.modal-title.text-center
          = t(:dashboard)[:arms][:add]
      .modal-body
        #modal_errors
        .row
          .col-md-12
            = a.hidden_field :protocol_id
            = hidden_field_tag :schedule_tab, schedule_tab
            = hidden_field_tag :service_request_id, service_request.id
            = hidden_field_tag :sub_service_request_id, sub_service_request.id
            .form-group
              = a.label "name", t(:dashboard)[:arms][:name], class: "col-sm-4 control-label"
              .col-sm-7= a.text_field "name", {class: 'form-control'}
            .form-group
              = a.label "subject_count", t(:dashboard)[:arms][:subject_count], class: "col-sm-4 control-label"
              .col-sm-7= a.text_field "subject_count", {class: 'form-control', value: ''}
            .form-group
              = a.label "visit_count", t(:dashboard)[:arms][:visit_count], class: "col-sm-4 control-label"
              .col-sm-7= a.text_field "visit_count", {class: 'form-control', value: ''}
      .modal-footer
        .center-block
          %button.btn.btn-default{type: 'button', data: {dismiss: 'modal'}}
            = t(:actions)[:close]
          %input.btn.btn-primary#add_arm_form_button{type: 'submit', value: t(:actions)[:add]}
