.modal-dialog
  .modal-content
    .modal-header
      %button.close{ type: 'button', data: { dismiss: 'modal' } }
        %span{ aria: { hidden: 'true' } } &times;
      %h4.text-center#modal-title= header_text
    .modal-body
      #modal_errors
      .row
        .col-lg-12
          .text-center
            %label= "#{identity.display_name} #{identity.phone || ''}"
            %a.btn.btn-xs.btn-danger.glyphicon.glyphicon-remove#new-associated-user-button{ href: "javascript:void(0);", data: { protocol_id: protocol.id, permission: 'true' } }
      %div#protocol_role_data{ data: { pr_id: identity.id, pr_name: identity.full_name, pi_id: current_pi.id, pi_name: current_pi.full_name }}
      = form_for [:dashboard, project_role], url: project_role.new_record? ? dashboard_associated_users_path : dashboard_associated_user_path(project_role), remote: true, html: { class: "protocol_role_form" } do |form|
        = form.hidden_field :identity_id
        = form.hidden_field :protocol_id
        .row
          .col-lg-12
            = form.fields_for :identity do |identity_form|
              .form-group.row.role_dependent.commons_name.do-not-display
                = identity_form.label :era_commons_name, t(:portal_user_form)[:era], class: 'col-lg-3 control-label'
                .col-lg-9
                  = identity_form.text_field :era_commons_name, class: 'form-control'

              .form-group.row
                = identity_form.label :credentials, t(:portal_user_form)[:credentials], class: 'col-lg-3 control-label'
                .col-lg-9
                  = identity_form.select :credentials, options_for_select(USER_CREDENTIALS, identity.credentials), { include_blank: t(:portal_user_form)[:credential_prompt] }, class: 'form-control selectpicker'

              .form-group.row.credentials_dependent.other.do-not-display
                = identity_form.label :credentials_other, t(:portal_user_form)[:credentials_other], class: 'col-lg-3 control-label'
                .col-lg-9
                  = identity_form.text_field :credentials_other, class: 'form-control'

              .form-group.row
                = identity_form.label :institution, t(:portal_user_form)[:institution], class: 'col-lg-3 control-label'
                .col-lg-9
                  = identity_form.select :institution, options_for_select((INSTITUTIONS.sort), identity.institution), { include_blank: t(:portal_user_form)[:institution_prompt] }, class: 'form-control selectpicker'

              .form-group.row
                = identity_form.label :college, t(:portal_user_form)[:college], class: 'col-lg-3 control-label'
                .col-lg-9
                  = identity_form.select :college, options_for_select(COLLEGES, identity.college), { include_blank: t(:portal_user_form)[:college_prompt] }, class: 'form-control selectpicker'

              .form-group.row
                = identity_form.label :department, t(:portal_user_form)[:department], class: 'col-lg-3 control-label'
                .col-lg-9
                  = identity_form.select :department, options_for_select(DEPARTMENTS, identity.department), { include_blank: t(:portal_user_form)[:department_prompt] }, class: 'form-control selectpicker'

              .form-group.row.role_dependent.subspecialty.do-not-display
                = identity_form.label :subspecialty, t(:portal_user_form)[:subspecialty], class: 'col-lg-3 control-label'
                .col-lg-9
                  = identity_form.select :subspecialty, options_for_select((SUBSPECIALTIES.sort), identity.subspecialty), { include_blank: t(:portal_user_form)[:subspecialty_prompt] }, class: 'form-control selectpicker'

            .form-group.row
              = form.label :role, t(:portal_user_form)[:role], class: 'col-lg-3 control-label'
              .col-lg-9
                = form.select :role, options_for_select(USER_ROLES, form.object.role), { include_blank: t(:portal_user_form)[:role_prompt] }, class: 'form-control selectpicker'

            .form-group.row.role_dependent.other.do-not-display
              = form.label :role_other, t(:portal_user_form)[:role_other], class: 'col-lg-3 control-label'
              .col-lg-9
                = form.text_field :role_other, class: 'form-control'

            - if USE_EPIC && protocol != nil && protocol.selected_for_epic
              .form-group.row
                = form.label :epic_access, t(:portal_user_form)[:epic_access], class: 'col-lg-3 control-label'
                .col-lg-9
                  %label.checkbox-inline
                    No
                  = form.radio_button :epic_access, false, class: 'epic_access'
                  %label.checkbox-inline
                    Yes
                  = form.radio_button :epic_access, true, class: 'epic_access'

            .form-group.row
              - disable = (form.object.role == 'pi' || form.object.role == 'primary-pi')
              = form.label :rights, t(:portal_user_form)[:rights][:header], class: 'col-lg-3 control-label'
              .col-lg-9
                .radio
                  %label
                    = form.radio_button :project_rights, "none", disabled: disable
                    %span= t(:portal_user_form)[:rights][:none]
                .radio
                  %label
                    = form.radio_button :project_rights, "view", disabled: disable
                    %span= t(:portal_user_form)[:rights][:view]
                .radio
                  %label
                    = form.radio_button :project_rights, "request", disabled: disable
                    %span= t(:portal_user_form)[:rights][:request]
                .radio
                  %label
                    = form.radio_button :project_rights, "approve", disabled: disable
                    %span= t(:portal_user_form)[:rights][:approve]

    .modal-footer
      .center-block
        %button.btn.btn-default#cancel_protocol_rights_button{ type: 'button' } Cancel
        %button.btn.btn-primary#save_protocol_rights_button Save
