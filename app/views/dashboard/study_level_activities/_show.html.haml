.modal-dialog{ role: 'document' }
  .modal-content
    .modal-header
      %h3.modal-title
        = line_item.service.display_service_name
      %button.close{ type: 'button', data: { dismiss: 'modal' }, aria: { label: t('actions.close') } }
        %span{ aria: { hidden: 'true' } } &times;
    .modal-body
      .card
        %table.table.table-striped.mb-0
          %tbody
            %tr.d-flex
              %td.d-inline-block.col-3.border-top-0
                = Service.human_attribute_name(:charge_code)
              %td.d-inline-block.col-9.border-top-0
                = line_item.service.charge_code
            %tr.d-flex
              %td.d-inline-block.col-3 
                = LineItem.human_attribute_name(:units_per_quantity)
              %td.d-inline-block.col-9
                = line_item.units_per_quantity
            %tr.d-flex
              %td.d-inline-block.col-3
                = LineItem.human_attribute_name(:unit_type)
              %td.d-inline-block.col-9
                = line_item.service.current_effective_pricing_map.otf_unit_type
            %tr.d-flex
              %td.d-inline-block.col-3
                = LineItem.human_attribute_name(:quantity)
              %td.d-inline-block.col-9
                = line_item.quantity
            %tr.d-flex
              %td.d-inline-block.col-3
                = LineItem.human_attribute_name(:quantity_type)
              %td.d-inline-block.col-9
                = line_item.service.current_effective_pricing_map.quantity_type
            %tr.d-flex
              %td.d-inline-block.col-3 
                = LineItem.human_attribute_name(:displayed_cost)
              %td.d-inline-block.col-9
                = sla_cost_display(line_item)
            %tr.d-flex
              %td.d-inline-block.col-3
                = LineItem.human_attribute_name(:created_at)
              %td.d-inline-block.col-9
                = format_date(line_item.created_at)
            %tr.d-flex
              %td.d-inline-block.col-3
                = LineItem.human_attribute_name(:in_process_date)
              %td.d-inline-block.col-9
                = format_date(line_item.in_process_date)
            %tr.d-flex
              %td.d-inline-block.col-3
                = LineItem.human_attribute_name(:complete_date)
              %td.d-inline-block.col-9
                = format_date(line_item.complete_date)
    .modal-footer
      %button.btn.btn-secondary{ type: 'button', data: { dismiss: 'modal' } }
        = t('actions.close')
