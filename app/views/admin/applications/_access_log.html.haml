.card
  .card-header.bg-primary.text-white
    %h3.mb-0
      = t('admin.applications.access_log.header')
  %table.table-interactive#accessLogTable{ data: { toggle: 'table', url: admin_application_access_requests_path(application, format: :json), search: 'true', show_columns: 'true', show_refresh: 'true', page_size: '25', sort_name: 'access_time', sort_order: 'desc' } }
    %thead.bg-light
      %tr
        %th.w-20{ data: { field: 'ip_address', sortable: 'true' } }
          = Doorkeeper::AccessRequest.human_attribute_name(:ip_address)
        %th.w-20{ data: { field: 'access_time', sortable: 'true', sorter: 'dateSorter' } }
          = Doorkeeper::AccessRequest.human_attribute_name(:created_at)
        %th.w-20{ data: { field: 'status', sortable: 'true' } }
          = Doorkeeper::AccessRequest.human_attribute_name(:status)
        %th.w-40{ data: { field: 'failure_reason', sortable: 'true' } }
          = Doorkeeper::AccessRequest.human_attribute_name(:failure_reason)
