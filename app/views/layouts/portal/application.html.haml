!!!
%html
  %head
    %title
      = t(:portal_title)
    = stylesheet_link_tag "#{CUSTOM_ASSET_PATH}portal/application"
    = stylesheet_link_tag 'study_tracker'
    - if @portal
      = javascript_include_tag 'application'
    - else
      = javascript_include_tag 'portal/application'
    = javascript_include_tag 'jquery.qtip.min.js'
    /[if IE]
      = stylesheet_link_tag 'ie'
    /[if gt IE 7]
      = stylesheet_link_tag 'ie8_plus'
    /[if lt IE 8]
      = javascript_include_tag "ie7_warning"
    = stylesheet_link_tag 'hover_effect'
    = stylesheet_link_tag 'navbar'
    = csrf_meta_tags
    :javascript
      window.I18n = #{current_translations.to_json.html_safe};

  %body
    #ie7_warning{style: 'display: none'}
      %p
        = t('ie_warning.text1')
      %br
      %p
        = t('ie_warning.text2')

    #container.container
      #processing_request.ui-corner-all{style: 'display:none'}
        %br
        = t(:cm_index)[:processing]
        %br
        = image_tag 'spinner.gif'
      = render partial: 'shared/header_logos'
      .welcome.col-md-12
        = render 'shared/navbar'
      #main
        #title
          %h1
            = render partial: 'portal/home/title'
        #content
          .notification_dialog
          = yield
  %footer
    = render partial: 'shared/piwik_tracking' if Rails.env == 'production'
