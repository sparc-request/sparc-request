= form_tag navigate_service_request_path(srid: @service_request.id), id: 'serviceRequestForm', class: 'w-100' do
  = render '/service_requests/navigation/header'

  .alert.d-none#pushToEpicStatus{ data: { protocol_id: @protocol.id } }

  #confirmation-page
    .card
      .card-header.bg-primary.text-white
        %h3.mb-0
          = t(:proper)[:confirmation][:service_requests_notice]
      .alert.alert-success.mb-0.rounded-0
        - if action_name == 'obtain_research_pricing'
          = t(:proper)[:confirmation][:cost_estimate_warning]
        - else
          = raw t('proper.confirmation.confirmation_warning', department_name: Setting.get_value('contact_us_department'), phone: Setting.get_value('contact_us_phone'), email: Setting.get_value('contact_us_mail_to'))
      %table.table.table-bordered.mb-0#request-ssrs-table
        %thead.bg-light
          %tr
            %th
              = t(:proper)[:confirmation][:table_fields][:request_id]
            %th
              = t(:proper)[:confirmation][:table_fields][:institution]
            %th
              = t(:proper)[:confirmation][:table_fields][:provider]
            %th
              = t(:proper)[:confirmation][:table_fields][:program_core]
            %th
              = t(:proper)[:confirmation][:table_fields][:contact]
        %tbody
          - @service_request.sub_service_requests.each do |ssr|
            %tr{ data: { ssrid: ssr.id } }
              %td
                = "#{@service_request.protocol.id} - #{ssr.ssr_id}"
              %td
                = ssr_institution(ssr.organization)
              %td
                = ssr_provider(ssr.organization)
              %td
                = ssr_program_core(ssr.organization)
              %td
                = raw(ssr_primary_contacts(ssr.organization))

  = render '/service_requests/navigation/footer'
