.modal-dialog.modal-sm{ role: 'document' }
  .modal-content
    = form_for arm, remote: true do |f|
      = hidden_field_tag :tab, tab
      - unless action_name == 'new'
        = hidden_field_tag :page, page
        - pages.each do |arm_id, page|
          = hidden_field_tag "pages[#{arm_id}]", page
      - if in_dashboard?
        = hidden_field_tag :ssrid, sub_service_request.try(:id)
      - else
        = hidden_field_tag :srid, service_request.try(:id)
      .modal-header
        %h3.modal-title
          = t("arms.#{action_name}")
        %button.close{ type: 'button', data: { dismiss: 'modal' }, aria: { label: t('actions.close') } }
          %span{ aria: { hidden: 'true' } } &times;
      .modal-body
        .form-group
          = f.label :name, class: 'required', title: t('arms.tooltips.name'), data: { toggle: 'tooltip' }
          = f.text_field :name, class: 'form-control'
        .form-group
          = f.label :subject_count, class: 'required', title: t('arms.tooltips.subject_count'), data: { toggle: 'tooltip' }
          = f.number_field :subject_count, class: 'form-control', min: 0
        .form-group
          = f.label :visit_count, class: 'required', title: t('arms.tooltips.subject_count'), data: { toggle: 'tooltip' }
          = f.number_field :visit_count, class: 'form-control', min: 0
          - if action_name == 'edit'
            %small.form-text.text-muted
              = t('arms.form.visit_count_note', visit_count: Arm.human_attribute_name(:visit_count))

      .modal-footer
        %button.btn.btn-secondary{ type: 'button', data: { dismiss: 'modal' } }
          = t('actions.close')
        = f.submit t('actions.submit'), class: 'btn btn-primary'
