.modal-dialog#add-new-organization
  .modal-content
    = form_for organization.becomes(Organization), url:  catalog_manager_organizations_path, remote: true do |f|
      = f.hidden_field :type
      = f.hidden_field :is_available, value: false
      = f.hidden_field :parent_id
      .modal-header
        %button.close{ type: 'button', data: { dismiss: 'modal'} }
          %span{ aria: { hidden: 'true' } } &times;
        %h4.text-center#modal-title
          = t(:catalog_manager)[:catalog][:new][organization.type.downcase.to_sym]

      .modal-body
        #modal_errors
        .form-group
          = f.label :name, t(:catalog_manager)[:organization_form][:name], class: 'col-sm-4 control-label'
          .col-sm-7= f.text_field :name, {class: 'form-control'}
        .clearfix
      .modal-footer
        %button.btn.btn-default{data: {dismiss: 'modal'}, type: 'button'} Close
        %input#create_organization_submit.btn.btn-primary{type: 'submit', value: t(:actions)[:save]}
