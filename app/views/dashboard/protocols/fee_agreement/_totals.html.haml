.card.w-100
  .card-header.justify-content-between.bg-primary.text-white{ data: { toggle: 'collapse', target: '#budget-summary' } }
    %h3.mb-0<
      = icon('fas', 'caret-down pr-1 mr-2')
      =t('dashboard.fee_agreement.budget_summary.header')

  .collapse#budget-summary.show
    .card-body
      %table.table
        %tbody
          %tr
            %td=t('dashboard.fee_agreement.budget_summary.total_non_clinical_services_cost')
            %td=number_to_currency(@fee_agreement.non_clinical_service_table.total)
          %tr
            %td=t('dashboard.fee_agreement.budget_summary.total_clinical_services_cost')
            %td=number_to_currency(@fee_agreement.clinical_total)
          %tr.table-secondary.font-weight-bold.total-budget
            %td=t('dashboard.fee_agreement.budget_summary.total_study_budget')
            %td=number_to_currency(@fee_agreement.grand_total)

