.modal-dialog{ id: "#{survey.model_name.human.downcase}-notifications-modal" }
  .modal-content
    = form_for survey, url: surveyor_survey_update_notifications_path(survey, type: survey.type), method: :post, remote: true do |f|
      .modal-header
        %h3.modal-title.text-center
          = t(:surveyor)[:notifications_form][:title]
        %button.close{ type: 'button', data: { dismiss: 'modal' }, aria: { label: t('actions.close') } }
          %span{ aria: { hidden: 'true' } } &times;
      .modal-body.mx-2
        .row
          .col-6
            = t(:surveyor)[:notifications_form][:user_roles]
        .row
          .col-10
            = f.select(:notify_roles, options_from_collection_for_select(user_roles, "id", "value", JSON.parse(survey.notify_roles)), {}, class: "selectpicker", multiple: true, 'data-actions-box' => true)
        .row.mt-4
          .col-6.mx-0
            = t(:surveyor)[:notifications_form][:notify_requester]
          .col-1.mx-0
            = f.check_box :notify_requester
      .modal-footer
        %button.btn.btn-secondary{ type: 'button', data: { dismiss: 'modal' } }
          = t('actions.close')
        = f.submit t(:actions)[:update_notifications], class: 'btn btn-primary'
