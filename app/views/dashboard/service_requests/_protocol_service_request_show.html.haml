.panel.panel-primary.service-request-info
  .panel-heading
    %h4.panel-title.pull-left
      = protocol_panel_header_line(service_request)
    .pull-right
      %button.btn.btn-sm.btn-default.notes.list{ data: {notable_type: "ServiceRequest", notable_id: service_request.id }} 
        = t(:models)[:note][:plural]
      - if !service_request.sub_service_requests.empty? && user.can_edit_service_request?(service_request)
        %button.edit_service_request.btn.btn-warning.btn-sm{ type: 'button', data: { permission: permission_to_edit.to_s, url: "/service_requests/#{service_request.id}/catalog?from_user_portal=true&edit_original=true" } }
          = t(:dashboard)[:service_requests][:edit_original]
    .clearfix
  %table.table.table-striped
    %thead
      %tr
        %th
          = t(:dashboard)[:service_requests][:srid]
        %th
          = t(:dashboard)[:service_requests][:organization]
        %th
          = t(:dashboard)[:service_requests][:status]
        %th{ colspan: 4 }
          = t(:dashboard)[:service_requests][:actions][:header]
    %tbody
      - service_request.sub_service_requests.each do |sub_service_request|
        - next if sub_service_request.status == 'first_draft'
        %tr
          %td.pretty-ssr-id
            = pretty_ssr_id(service_request.protocol, sub_service_request)
          %td.organization
            = sub_service_request.org_tree_display
          %td.status
            = AVAILABLE_STATUSES[sub_service_request.status]
          %td.actions
            = render partial: 'dashboard/notifications/dropdown', locals: { sub_service_request: sub_service_request, user: user, admin: admin }
          %td
            %button.view-sub-service-request-button.btn.btn-primary.btn-sm{ type: 'button', data: { sub_service_request_id: sub_service_request.id } }
              = t(:dashboard)[:service_requests][:actions][:view]
          - if user.can_edit_sub_service_request?(sub_service_request)
            %td.edit-td
              %button.edit_service_request.btn.btn-warning.btn-sm{ type: 'button', data: { permission: permission_to_edit.to_s, url: "/service_requests/#{service_request.id}/catalog?sub_service_request_id=#{sub_service_request.id}&from_user_portal=true" } }
                = t(:dashboard)[:service_requests][:actions][:edit]
          - if user.admin_organizations.include?(sub_service_request.organization)
            %td.admin-edit-td
              %a.edit_service_request.btn.btn-warning.btn-sm{ type: 'button', href: "/dashboard/sub_service_requests/#{sub_service_request.id}", data: { permission: permission_to_edit.to_s } }
                = t(:dashboard)[:service_requests][:actions][:admin_edit]
