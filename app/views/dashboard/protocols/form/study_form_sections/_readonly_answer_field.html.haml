.form-group.row{id: "study_type_answer_#{answer.object.study_type_question.friendly_id}", style: display_study_type_question?(protocol, answer.object) ? 'display:block;' : 'display:none;'}
  .col-lg-8
    = answer.label :answer, answer.object.study_type_question.question, class: "long"
  .col-lg-4
    = display_readonly_answer(answer.object.answer)
    - if display_study_type_question?(protocol, answer.object)
      = link_to (answer.object.answer.nil? ? t(:dashboard)[:protocols][:form][:new_answer] : t(:dashboard)[:protocols][:form][:edit_answer]),edit_dashboard_protocol_study_type_answers_path(protocol, edit_answers: true),class: 'btn btn-warning edit-answers', remote: true
