.modal-dialog{ role: 'document' }
  .modal-content
    .modal-header
      %h3.modal-title
        = t('admin.permissible_values.view.header')
      %button.close{ type: 'button', data: { dismiss: 'modal' }, aria: { label: t('actions.close') } }
        %span{ aria: { hidden: 'true' } } &times;
    .modal-body
      .card
        %table.table.table-striped.mb-0
          %tbody
            %tr.d-flex
              %td.d-inline-block.col-3.border-top-0
                = PermissibleValue.human_attribute_name(:category)
              %td.d-inline-block.col-9.border-top-0
                = permissible_value.category
            %tr.d-flex
              %td.d-inline-block.col-3 
                = PermissibleValue.human_attribute_name(:key)
              %td.d-inline-block.col-9
                = permissible_value.key
            %tr.d-flex
              %td.d-inline-block.col-3
                = PermissibleValue.human_attribute_name(:value)
              %td.d-inline-block.col-9
                = permissible_value.value
            %tr.d-flex
              %td.d-inline-block.col-3
                = PermissibleValue.human_attribute_name(:sort_order)
              %td.d-inline-block.col-9
                = permissible_value.sort_order
            %tr.d-flex
              %td.d-inline-block.col-3
                = PermissibleValue.human_attribute_name(:default)
              %td.d-inline-block.col-9
                = format_boolean(permissible_value.default)
            %tr.d-flex
              %td.d-inline-block.col-3
                = PermissibleValue.human_attribute_name(:created_at)
              %td.d-inline-block.col-9
                = format_date(permissible_value.created_at)
            %tr.d-flex
              %td.d-inline-block.col-3
                = PermissibleValue.human_attribute_name(:updated_at)
              %td.d-inline-block.col-9
                = format_date(permissible_value.updated_at)
    .modal-footer
      %button.btn.btn-secondary{ type: 'button', data: { dismiss: 'modal' } }
        = t('actions.close')
