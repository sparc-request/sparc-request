.card#fundingsList
  .card-header.bg-primary.text-white
    %h3.mb-0
      = t('funding.index.header')

  #fundingsTableToolbar
  %table#fundings_table{ data: { toggle: 'table', url: funding_services_path(format: :json), search: 'true', pagination: 'true', page_size: '20', sort_name: 'created', sort_order: 'desc', toolbar: '#fundingsTableToolbar' } }
    %thead.bg-light
      %tr
        %th{ data: { class: 'title', field: "title", align: "left", sortable: 'true' } }
          = t(:funding)[:index][:table][:headers][:title]
        %th{ class: 'program', data: { field: "program", align: "left", sortable: 'true' } }
          = t(:funding)[:index][:table][:headers][:program]
        %th{ class: 'created', data: { field: "created", align: "left", sortable: 'true' , sorter: "dateSorter"  } }
          = t(:funding)[:index][:table][:headers][:created]
        %th{ class: 'action', data: { field: "action", align: "center" } }
          = t(:funding)[:index][:table][:headers][:action]