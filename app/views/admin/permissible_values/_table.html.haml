%main.card#pvCard
  .card-header.bg-primary.text-white
    %h3.mb-0
      = t('admin.permissible_values.table.header')
  #pvTableToolbar
    = link_to new_admin_permissible_value_path, class: 'btn btn-success', remote: true do
      - succeed t('admin.permissible_values.new') do
        = icon('fas', 'plus mr-2')
  %table.table#pvTable{ data: { toggle: 'table', url: admin_permissible_values_path(format: :json), search: 'true', show_columns: 'true', show_refresh: 'true', pagination: 'true', page_size: '25', sort_name: 'category', sort_order: 'asc', toolbar: '#pvTableToolbar' } }
    %thead.bg-light
      %tr
        %th{ data: { field: 'category', sortable: 'true' } }
          = PermissibleValue.human_attribute_name(:category)
        %th{ data: { field: 'key', sortable: 'true' } }
          = PermissibleValue.human_attribute_name(:key)
        %th{ data: { field: 'value', sortable: 'true' } }
          = PermissibleValue.human_attribute_name(:value)
        %th{ data: { field: 'sort_order', align: 'center', sortable: 'true' } }
          = PermissibleValue.human_attribute_name(:sort_order)
        %th{ data: { field: 'default', align: 'center', sortable: 'true'} }
          = PermissibleValue.human_attribute_name(:default)
        %th{ data: { field: 'is_available', align: 'center', sortable: 'true'} }
          = PermissibleValue.human_attribute_name(:is_available)
        %th{ data: { field: 'reserved', align: 'center', sortable: 'true', visible: 'false' } }
          = PermissibleValue.human_attribute_name(:reserved)
        %th{ data: { field: 'created_at', align: 'center', sortable: 'true', sorter: 'dateSorter', visible: 'false' } }
          = PermissibleValue.human_attribute_name(:created_at)
        %th{ data: { field: 'updated_at', sortable: 'true', sorter: 'dateSorter' } }
          = PermissibleValue.human_attribute_name(:updated_at)
        %th{ data: { class: 'actions', align: 'center', field: 'actions' } }
          = t('actions.actions')          
