.modal-dialog.modal-lg#notes-modal
  .modal-content
    .modal-header
      %button.close{ type: 'button', data: { dismiss: 'modal' } }
        %span{ aria: { hidden:'true' } } &times;
      %h4.modal-title.text-center
        = note_header(notable)
    .modal-body
      #modal_errors
      = render 'notes/table', notable_id: notable_id, notable_type: notable_type, review: @review, cancel: 'true'
    .modal-footer
      .center-block
        %button.btn.btn-default{ type: 'button', data: { dismiss: 'modal' } }
          = t(:actions)[:close]
        - unless @review
          = link_to new_note_path(note: { notable_id: notable_id, notable_type: notable_type }, cancel: 'true'), remote: true, class: 'btn btn-primary' do
            %span.glyphicon.glyphicon-plus{ aria: {hidden: "true"} }
            = t(:notes)[:add]
