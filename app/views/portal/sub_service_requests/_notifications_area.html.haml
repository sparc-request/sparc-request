%h3 Send Notifications
%ul.fulfillment_notifications
  %li.new_notification.roles{:'data-identity_id' => service_request.try(:service_requester).try(:id), :'data-sub_service_request_id' => sub_service_request.id}
    = t(:notifications)[:requester] + service_request.try(:service_requester).try(:full_name)

  - protocol.project_roles.each do |pr|
    %li.new_notification.roles{:'data-identity_id' => pr.identity.id, :'data-sub_service_request_id' => sub_service_request.id}
      = display_user_role(pr) + ': '
      = pr.identity.full_name
  .clear
  
  - unless @admin
    %h4 Service Providers:
    .border_top_container
      - sub_service_request.organization.service_providers.includes(:identity).sort_by{|sp| sp.identity.last_name}.each do |sp|
        %li.new_notification{:'data-identity_id' => sp.identity.id, :'data-sub_service_request_id' => sub_service_request.id}
          = sp.identity.full_name
      .clear

- if @admin
  .new_notification_dialog
