.sps
  - if entity.service_providers
    - if @service_provider_error_message
      .service_provider_error= @service_provider_error_message
    %table
      %thead
        %tr
          %th= t("cm_shared.labels.name_email")
          %th.check= t("cm_shared.labels.primary")
          %th.check= t("cm_shared.labels.hold")
          %th= t("cm_shared.labels.delete")
      %tbody
        - entity.service_providers.each do |sp|
          %tr
            %td= sp.identity.display_name
            %td.check= check_box_tag "#{sp.id}_contact", true, sp.is_primary_contact, :class => 'primary_contact', :org_id => entity.id, :contact_flag => sp.is_primary_contact, :identity => sp.id, :emails_flag => sp.hold_emails
            %td.check= check_box_tag "#{sp.id}_emails", true, sp.hold_emails, :class => 'hold_emails', :org_id => entity.id, :contact_flag => sp.is_primary_contact, :identity => sp.id, :emails_flag => sp.hold_emails
            %td= image_tag 'cancel.png', :id => sp.id, :class => 'sp_delete'

  = text_field_tag 'new_sp', t(:organization_form)[:new_sp]
