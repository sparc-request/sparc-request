#cart-help-modal
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{ type: 'button', data: { dismiss: 'modal' } }
          %span{ aria: { hidden: 'true' } } &times;
        %h4.text-center#modal-title
          = t(:proper)[:right_navigation][:faqs][:header]
      .modal-body
        #modal_errors
        .card
          .list-group
            = link_to t(:proper)[:right_navigation][:faqs][:question_1], 'javascript:void(0)', class: 'list-group-item list-group-item-action list-group-item-info help-question', data: { id: 1 }
