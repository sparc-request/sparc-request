.section{ class: "section-#{section.id}", data: { section_id: section.id } }
  %br
  %br
  .panel.panel-default
    .panel-heading
      .col-sm-11.no-padding
        = text_field_tag "section-#{section.id}-title", section.title, class: 'form-control', placeholder: t(:surveyor)[:surveys][:form][:placeholders][:section][:title], maxlength: 255
      .col-sm-1.no-padding
        %button.btn.btn-sm.btn-danger.pull-right.delete-section{ title: t(:surveyor)[:surveys][:form][:content][:section][:delete], data: { toggle: 'tooltip', animation: 'false' } }
          %span.glyphicon.glyphicon-trash
    .panel-body
      .form-group
        .col-lg-12.no-padding
          = text_area_tag "section-#{section.id}-description", section.description, class: 'form-control', placeholder: t(:surveyor)[:surveys][:form][:placeholders][:section][:description]

      .section-questions{ class: "section-#{section.id}-questions" }
        - section.questions.each do |question|
          = render 'surveyor/surveys/form/survey_question', survey: survey, section: section, question: question

      .form-group
        %button.btn.btn-sm.btn-primary.add-question
          = add_question_content
