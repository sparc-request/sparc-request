#protocol_form_display
  = form_for ([:dashboard, protocol]), as: :protocol, remote: true, html: { class: 'form-horizontal', autocomplete: 'off' } do |form|
    = form.hidden_field :requester_id
    = form.hidden_field :type

    - if @protocol.type.capitalize == "Study"
      .edit-study-view.container-fluid
        .row.user-edit-protocol-view
          = render partial: 'dashboard/protocols/form/study_fields', locals: { form: form, protocol: protocol, admin: admin, permission_to_edit: permission_to_edit }

    - elsif @protocol.type.capitalize == "Project"
      .edit-project-view.container-fluid
        .row.user-edit-protocol-view
          = render partial: 'dashboard/protocols/form/project_fields', locals: { form: form, protocol: protocol }

    - unless protocol.id.present? # New Protocol, authorized users fields required
      = render partial: 'dashboard/protocols/form/project_roles_fields', locals: { form: form, protocol: protocol }

    .row#actions
      .col-lg-4
      .col-lg-4
        %input.btn.btn-lg.btn-success{ type: "submit", value: t(:actions)[:save] }
        = link_to t(:actions)[:cancel], protocol.id.present? ? dashboard_protocol_path(protocol) : dashboard_protocols_path, class: 'btn btn-lg btn-danger'
