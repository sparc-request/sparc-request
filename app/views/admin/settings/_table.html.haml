%main.card#settingsCard
  .card-header.bg-primary.text-white
    %h3.mb-0
      = t('admin.settings.table.header')
  #settingsTableToolbar
  %table.table-interactive#settingsTable{ data: { toggle: 'table', url: admin_settings_path(format: :json), search: 'true', show_columns: 'true', show_refresh: 'true', show_export: 'true', pagination: 'true', page_size: '25', sort_name: 'group', sort_order: 'desc', toolbar: '#settingsTableToolbar' } }
    %thead.bg-light
      %tr
        %th.w-10{ data: { field: 'group', sortable: 'true' } }
          = Setting.human_attribute_name(:group)
        %th.w-10{ data: { field: 'key', sortable: 'true' } }
          = Setting.human_attribute_name(:key)
        %th.w-15{ data: { field: 'value', sortable: 'true' } }
          = Setting.human_attribute_name(:value)
        %th.w-5{ data: { field: 'data_type', sortable: 'false', visible: 'false' } }
          = Setting.human_attribute_name(:data_type)
        %th{ data: { field: 'friendly_name', sortable: 'true' } }
          = Setting.human_attribute_name(:friendly_name)
        %th{ data: { field: 'description', sortable: 'false', visible: 'false' } }
          = Setting.human_attribute_name(:description)
        %th.w-10{ data: { field: 'parent_key', sortable: 'true' } }
          = Setting.human_attribute_name(:parent_key)
        %th.w-10{ data: { field: 'parent_value', sortable: 'true' } }
          = Setting.human_attribute_name(:parent_value)
        %th{ data: { field: 'version', sortable: 'true', visible: 'false' } }
          = Setting.human_attribute_name(:version)
        %th.w-8{ data: { class: 'actions', align: 'center', field: 'actions' } }
          = t('actions.actions')
