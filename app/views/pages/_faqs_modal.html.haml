.modal-dialog{ role: 'document' }
  .modal-content
    .modal-header
      %h3.modal-title
        = t('layout.footer.links.faqs.header')
      %button.close{ type: 'button', data: { dismiss: 'modal' }, aria: { label: t('actions.close') } }
        %span{ aria: { hidden: 'true' } } &times;
    .modal-body
      .card.faq
        .card-header.bg-light#faq1
          %button.btn.btn-link.text-left.p-0{ data: { toggle: 'collapse', target: '#faqAnswer1' }, aria: { expanded: 'true', controls: 'faqAnswer1' } }
            = t('layout.footer.links.faqs.question_1')
        .collapse#faqAnswer1{ aria: { labelledby: 'faq1' } }
          .card-body
            = t('layout.footer.links.faqs.answer_1')
      .card.faq
