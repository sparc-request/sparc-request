= form_for identity, as: identity, url: registration_path(identity) do |identity_form|      
  - if resource.errors.any?
    = render 'shared/modal_errors', errors: resource.errors
  .panel.panel-default
    .panel-body.container-fluid
      .form-group.row
        = identity_form.label :email, t(:devise)[:profile][:email], class: 'col-lg-3 control-label required'
        .col-lg-9
          = identity_form.text_field :email, class: 'form-control'

      .form-group.row
        = identity_form.label :phone, t(:devise)[:profile][:phone], class: 'col-lg-3 control-label'
        .col-lg-9
          = identity_form.text_field :phone, class: 'form-control'

      .form-group.row
        .col-lg-3.control-label.bold
          = link_to(t(:devise)[:profile][:orcid], t(:devise)[:profile][:links][:orcid], target: :blank)
        .col-lg-9
          = identity_form.text_field :orcid, class: 'form-control', placeholder: t(:devise)[:profile][:placeholders][:orcid], maxlength: 19

      .form-group.row
        = identity_form.label :era_commons_name, t(:devise)[:profile][:era_commons_name], class: 'col-lg-3 control-label'
        .col-lg-9
          = identity_form.text_field :era_commons_name, class: 'form-control'

      .form-group.row
        = identity_form.label :subspecialty, t(:devise)[:profile][:subspecialty], class: 'col-lg-3 control-label'
        .col-lg-9
          = identity_form.select :subspecialty, options_for_select(PermissibleValue.get_inverted_hash('subspecialty'), identity.subspecialty), { include_blank: t(:devise)[:profile][:subspecialty_prompt] }, class: 'form-control selectpicker'

      .form-group.row
        = identity_form.label :credentials, t(:devise)[:profile][:credentials], class: 'col-lg-3 control-label'
        .col-lg-9
          = identity_form.select :credentials, options_for_select(PermissibleValue.get_inverted_hash('user_credential'), identity.credentials), { include_blank: t(:devise)[:profile][:credentials_prompt] }, class: 'form-control selectpicker'

      .form-group.row.style{display_if(identity.credentials == 'other')}
        = identity_form.label :credentials_other, t(:devise)[:profile][:credentials_other], class: 'col-lg-3 control-label'
        .col-lg-9
          = identity_form.text_field :credentials_other, class: 'form-control'

      = render("dashboard/associated_users/professional_organizations", professional_organization: identity.professional_organization)

  .text-center
    %p
      = identity_form.submit t(:devise)[:profile][:update], class: 'btn btn-primary'
      = link_to t(:devise)[:profile][:cancel], back, class: 'btn btn-default'