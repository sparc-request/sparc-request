- if portal || !review
  - if (sub_service_request.nil? ? service_request.has_one_time_fee_services? : sub_service_request.has_one_time_fee_services?) || merged
    .panel.panel-default
      .panel-heading
        %h3.panel-title= t(:calendar_page)[:headers][:services]
      %table{ class: "table table-bordered", style: 'width: 100%;' }
        %thead
          = render partial: 'dashboard/service_calendars/master_calendar/otf/otf_header', locals: { service_request: service_request,  tab: tab, portal: portal, sub_service_request: sub_service_request, review: review, merged: merged, study_tracker: study_tracker }
        %tbody
          = render partial: 'dashboard/service_calendars/master_calendar/otf/otf_line_items', locals: { service_request: service_request,  tab: tab, portal: portal, sub_service_request: sub_service_request, review: review, merged: merged, protocol: protocol }
