.modal-dialog#newSurvey{ rolw: 'document' }
  .modal-content
    = form_for survey, url: surveyor_surveys_path(survey, type: survey.type), method: :post, remote: true do |f|
      .modal-header
        %h3.modal-title
          = I18n.t('surveyor.surveys.new_form.header', klass: survey.model_name.human)
        %button.close{ type: 'button', data: { dismiss: 'modal' }, aria: { label: t('actions.close') } }
          %span{ aria: { hidden: 'true' } } &times;
      .modal-body
        .form-group
          = f.label :access_code, t(:surveyor)[:surveys][:form][:survey_information][:access_code], class: 'control-label required'
          = f.text_field :access_code, class: 'form-control'
      .modal-footer
        %button.btn.btn-secondary{ type: 'button', data: { dismiss: 'modal' } }
          = t(:actions)[:close]
        = f.submit t(:actions)[:create], class: 'btn btn-primary'
