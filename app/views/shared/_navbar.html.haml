%ul.navbar
  %li.dashboard
    = link_to NAV_LINKS['dashboard'], portal_root_path
  - if  current_user
    - if !NAV_LINKS['admin'].blank? && current_user.is_service_provider?
      %li.admin
        = link_to NAV_LINKS['admin'], portal_admin_path
    - if current_user.is_super_user?
      %li.reports
        = link_to NAV_LINKS['report'], reports_path
    - if !NAV_LINKS['fulfillment'].empty? && current_user.is_fulfillment_provider?
      %li.fulfillment
        = link_to NAV_LINKS['fulfillment'], CLINICAL_WORK_FULFILLMENT_URL, target: '_blank'
    - if (current_user.is_overlord? || current_user.is_catalog_manager?)
      %li.catalog
        = link_to NAV_LINKS['catalog'], catalog_manager_catalog_index_path,  target: '_blank'

  .right-section
    %li.align-element-nav-bar
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String)
    - if current_user.present?
      %li.align-element-nav-bar
        = "Logged in as #{current_user.email}"
      %li
        = link_to 'Logout', destroy_identity_session_path, method: :delete, class: 'logout'
    - else
      %li
        = link_to 'Login', new_identity_session_path, class: 'logout'
