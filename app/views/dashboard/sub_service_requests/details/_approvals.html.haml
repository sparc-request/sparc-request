.card.w-100
  .card-header.bg-primary.text-white
    %h3.mb-0<
      = t('dashboard.sub_service_requests.request_details.approvals.header')
  .card-body
    = form_for sub_service_request do |f|
      .d-flex.justify-content-between
        .custom-control.custom-checkbox.custom-control-lg.custom-control-inline<>
          = f.check_box :nursing_nutrition_approved, { class: 'custom-control-input' }
          = f.label :nursing_nutrition_approved, class: 'custom-control-label'
        .custom-control.custom-checkbox.custom-control-lg.custom-control-inline<>
          = f.check_box :lab_approved, { class: 'custom-control-input' }
          = f.label :lab_approved, class: 'custom-control-label'
        .custom-control.custom-checkbox.custom-control-lg.custom-control-inline<>
          = f.check_box :imaging_approved, { class: 'custom-control-input' }
          = f.label :imaging_approved, class: 'custom-control-label'
        .custom-control.custom-checkbox.custom-control-lg.custom-control-inline<>
          = f.check_box :committee_approved, { class: 'custom-control-input' }
          = f.label :committee_approved, class: 'custom-control-label'