.modal-dialog{ role: 'document' }
  .modal-content
    = form_for contact_form, remote: true do |f|
      .modal-header
        %h3.modal-title
          = t('contact_forms.header')
        %button.close{ type: 'button', data: { dismiss: 'modal' }, aria: { label: t('actions.close') } }
          %span{ aria: { hidden: 'true' } } &times;
      .modal-body
        .form-row
          .form-group.col-6
            = f.label :name, class: 'required'
            = f.text_field :name, value: current_user.try(&:full_name), class: 'form-control'
          .form-group.col-6
            = f.label :email, class: 'required'
            = f.text_field :email, value: current_user.try(:email), class: 'form-control'
        .form-group
          = f.label :subject, class: 'required'
          = f.text_field :subject, size: 35, class: 'form-control'
        .form-group
          = f.label :message, class: 'required'
          = f.text_area :message, rows: 10, class: 'form-control'
      .modal-footer
        %button.btn.btn-secondary{ type: 'button', data: { dismiss: 'modal' } }
          = t('actions.close')
        = f.submit t('actions.submit'), class: 'btn btn-primary'
