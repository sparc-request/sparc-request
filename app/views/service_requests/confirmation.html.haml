= javascript_include_tag 'confirmation'

= render '/service_requests/navigation/steps', service_request: @service_request, sub_service_request_id: @sub_service_request.try(:id), step: @step_text, step_number: @step_number, css_class: @css_class
.col-sm-12.body-container#confirmation-page
  = form_tag navigate_service_request_path(@service_request) do
    = hidden_field_tag :location, ''
    = hidden_field_tag :validates, ''
    .form-group
      %p.instructions
        = t(:sr_confirmation)[:instructions]
    .form-group
      = render 'service_requests/confirmation/confirmation_details', service_request: @service_request
    - if USE_EPIC && !QUEUE_EPIC
      .form-group
        = render 'protocols/push_to_epic', protocol: @protocol
    .form-group.text-center
      = link_to t(:proper)[:confirmation][:download_request], service_request_path(format: :xlsx), class: 'btn btn-lg btn-success'
      = link_to t(:proper)[:confirmation][:to_dashboard], DASHBOARD_LINK, class: 'btn btn-lg btn-success'
