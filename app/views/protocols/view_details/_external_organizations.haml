%section.pt-3#externalOrganizations
  .card
    .card-header.bg-primary.text-white
      %h3.mb-0
        = t('protocols.form.external_organizations.header')
    %table.table.mb-0
      %tbody
        %tr.bg-light
          %td
            %h6.mb-0
              - if protocol.external_organizations.any?
                = protocol.external_organizations.each do |external_organization|
                  = external_organization.collaborating_org_name.upcase
          %td.d-inline-block.col-9
            = protocol.external_organizations.any? ? protocol.external_organizations.first.collaborating_org_name : t('constants.na')
        %tr.d-flex
          %td.d-inline-block.col-3
            = label :protocol, 'Type', class: 'mb-0'
          %td.d-inline-block.col-9
            = protocol.external_organizations.present? ? protocol.external_organizations : t('constants.na')
        %tr.d-flex
          %td.d-inline-block.col-3
            = label :protocol, ExternalOrganization.human_attribute_name(:comments), class: 'mb-0'
          %td.d-inline-block.col-9
            = protocol.external_organizations.present? ? protocol.external_organizations.first.comments : t('constants.na')


