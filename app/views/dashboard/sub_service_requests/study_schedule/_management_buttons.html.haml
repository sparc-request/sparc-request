.card#studyScheduleManagement
  .card-header.bg-primary.text-white
    %h3.mb-0
      = t('dashboard.sub_service_requests.study_schedule.manage.header')
  .card-body.d-flex.justify-content-around
    .arms-actions-container.d-flex.flex-column
      %h4.text-center
        = t('dashboard.sub_service_requests.study_schedule.manage.arms')
      .arms-actions.text-center
        = link_to icon('fas', 'plus'), new_dashboard_arm_path(ssrid: sub_service_request.id, tab: tab), remote: true, class: 'btn btn-success', title: t('arms.new'), data: { toggle: 'tooltip' }
        = link_to icon('far', 'edit'), navigate_dashboard_arms_path(ssrid: sub_service_request.id, intended_action: 'edit'), remote: true, class: 'btn btn-warning', title: t('arms.edit'), data: { toggle: 'tooltip' }
        = link_to icon('fas', 'trash-alt'), navigate_dashboard_arms_path(ssrid: sub_service_request.id, intended_action: 'destroy'), remote: true, class: 'btn btn-danger', title: t('arms.delete'), data: { toggle: 'tooltip' }
    .visits-actions-container.d-flex.flex-column
      %h4.text-center
        = t('dashboard.sub_service_requests.study_schedule.manage.visit_groups')
      .visit-actions.text-center
        = link_to icon('fas', 'plus'), new_dashboard_visit_group_path(ssrid: sub_service_request.id), remote: true, class: 'btn btn-success', title: t('visit_groups.new'), data: { toggle: 'tooltip' }
        = link_to icon('far', 'edit'), navigate_dashboard_visit_groups_path(ssrid: sub_service_request.id, intended_action: 'edit'), remote: true, class: 'btn btn-warning', title: t('visit_groups.edit'), data: { toggle: 'tooltip' }
        = link_to icon('fas', 'trash-alt'), navigate_dashboard_visit_groups_path(ssrid: sub_service_request.id, intended_action: 'destroy'), remote: true, class: 'btn btn-danger', title: t('visit_groups.delete'), data: { toggle: 'tooltip' }
    .services-actions-container.d-flex.flex-column
      %h4.text-center
        = t('dashboard.sub_service_requests.study_schedule.manage.services')
      .services-actions.text-center
        = link_to icon('fas', 'plus'), new_line_items_dashboard_multiple_line_items_path(ssrid: sub_service_request.id), remote: true, class: 'btn btn-success', title: t('line_items.new'), data: { toggle: 'tooltip' }
        = link_to icon('fas', 'trash-alt'), edit_line_items_dashboard_multiple_line_items_path(ssrid: sub_service_request.id), remote: true, class: 'btn btn-danger', title: t('line_items.delete'), data: { toggle: 'tooltip' }
