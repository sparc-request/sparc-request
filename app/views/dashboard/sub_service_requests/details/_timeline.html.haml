= form_for [:dashboard, sub_service_request], html: { class: 'w-100' } do |f|
  .form-row
    .form-group.col-6
      = f.label :consult_arranged_date
      .input-group.datetimepicker.date#consultArrangedDatePicker{ data: { target_input: 'nearest' } }
        = f.text_field :consult_arranged_date, class: 'datetimepicker-input form-control', value: format_date(sub_service_request.consult_arranged_date), data: { target: '#consultArrangedDatePicker' }
        .input-group-append{ data: { toggle: 'datetimepicker', target: '#consultArrangedDatePicker' } }
          %span.input-group-text
            = icon('fas', 'calendar-alt')
    .form-group.col-6
      = f.label :requester_contacted_date
      .input-group.datetimepicker.date#requesterContactedDatePicker{ data: { target_input: 'nearest' } }
        = f.text_field :requester_contacted_date, class: 'datetimepicker-input form-control', value: format_date(sub_service_request.requester_contacted_date), data: { target: '#requesterContactedDatePicker' }
        .input-group-append{ data: { toggle: 'datetimepicker', target: '#requesterContactedDatePicker' } }
          %span.input-group-text
            = icon('fas', 'calendar-alt')

