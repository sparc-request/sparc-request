.bootstrap-table-dropdown-overflow
  %table#forms-table{ data: { toggle: 'table', search: 'true', 'show-columns' => 'true', 'show-refresh' => 'true', 'show-toggle' => 'true', url: forms_path(format: :json, srid: service_request.id, complete: complete.to_s, review: review.to_s), striped: "true", toolbar: "#forms-custom-toolbar" } }
