.modal-dialog.modal-md
  .modal-content
    = form_for arm, url: move_visit_position_service_calendars_path(arm_id: arm.id, service_request_id: service_request.id), remote: true, method: :post, html: { class: 'form-horizontal', role: 'form' } do |f|
      .modal-header
        %button.close{type: 'button', data: {dismiss: 'modal'}}
          %span{aria: {hidden:'true'}} &times;
          %span.sr-only &times;
        %h4.modal-title.text-center
          = t(:proper)[:service_calendar][:move_visit][:header]
      .modal-body
        .row
          .col-md-12
            .form-group
              = label_tag :visit_group, t(:proper)[:service_calendar][:move_visit][:visit_group], class: 'col-lg-3 control-label'
              .col-lg-7
                = select_tag :visit_group, options_from_collection_for_select(arm.visit_groups, 'id', 'name'), include_blank: false, class: 'form-control selectpicker'
            .form-group
              = label_tag :position, t(:proper)[:service_calendar][:move_visit][:position], class: 'col-lg-3 control-label'
              .col-lg-7
                = select_tag :position, options_from_collection_for_select(arm.visit_groups, 'position', 'insertion_name'), include_blank: 'add as last', class: 'form-control selectpicker'
      .modal-footer
        .center-block
          %button.btn.btn-default{ type: 'button', data: { dismiss: 'modal' } }
            = t(:actions)[:close]
          %button.btn.btn-primary{ type: 'submit' }
            = t(:actions)[:save]
