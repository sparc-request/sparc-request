- if controller_name != 'sessions'
  = link_to t(:devise)[:links][:sign_in], new_session_path(resource_name), class: 'devise-link'
- if devise_mapping.registerable? && controller_name != 'registrations'
  = link_to t(:devise)[:links][:sign_up], new_registration_path(resource_name), class: 'devise-link'
- if devise_mapping.recoverable? && controller_name != 'passwords'
  = link_to t(:devise)[:links][:forgot_password], new_password_path(resource_name), class: 'devise-link'
- if devise_mapping.confirmable? && controller_name != 'confirmations'
  = link_to t(:devise)[:links][:confirmation_instructions], new_confirmation_path(resource_name), class: 'devise-link'
- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
  = link_to t(:devise)[:links][:unlock_instructions], new_unlock_path(resource_name), class: 'devise-link'
- if devise_mapping.omniauthable?
  - resource_class.omniauth_providers.each do |provider|
    = link_to I18n.t('devise.links.provider_sign_in', provider_name: provider.to_s.titleize), omniauth_authorize_path(resource_name, provider), class: 'devise-link'
