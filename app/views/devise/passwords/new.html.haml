%h1.text-center.mb-4
  = t('devise.passwords.new.header')
= form_for resource, as: resource_name, url: password_path(resource_name), method: :post, remote: true do |f|
  .form-group
    = f.label :ldap_uid, class: 'required'
    = f.text_field :ldap_uid, autofocus: true, class: 'form-control'
  .form-group
    = f.submit t('devise.passwords.new.send_reset'), class: 'btn btn-lg btn-block btn-outline-primary'
= render 'devise/shared/links'
.form-group.mb-0
  = link_to t('devise.back_to_catalog'), root_path, class: 'btn btn-lg btn-block btn-secondary'
