#no_results
  %p There were no results matching your search criteria. Please search again, or clear the search, and browse manually.
#show_all_services
  - if @show_unavailable.length == 2
    = link_to "Show Available", 'javascript:void(0)', :class => "btn unavailable_button", data: { 'show-unavailable' => 'true' }
  - else
    = link_to "Show All", 'javascript:void(0)', :class => "btn unavailable_button", data: { 'show-unavailable' => 'false' }
#catalog
  %ul
    - can_create_institution = @user.is_overlord?
    - if can_create_institution
      %li= link_to t(:cm_index)[:institution], '#', :class => "institution"
    - @institutions.where(is_available: @show_unavailable).each do |institution|
      %li{:id => 'INSTITUTION' + institution.id.to_s, :class => entity_visibility_class(institution)}
        - can_access_institution = @user.can_edit_entity? institution
        = node institution, can_access_institution, 'root'
        %ul
          - if can_access_institution
            %li= link_to t(:cm_index)[:provider], '#', :class => "provider"
          - institution.providers.where(is_available: @show_unavailable).order("`order`").each do |provider|
            %li{:id => 'PROVIDER' + provider.id.to_s, :class => entity_visibility_class(provider)}
              - can_access_provider = can_access_institution || (@user.can_edit_entity? provider)
              = node provider, can_access_provider
              %ul
                - if can_access_provider
                  %li= link_to t(:cm_index)[:program], '#', :class => "program"
                - provider.programs.where(is_available: @show_unavailable).order("`order`").each do |program|
                  %li{:id => 'PROGRAM' + program.id.to_s, :class => entity_visibility_class(program)}
                    - can_access_program = can_access_provider || (@user.can_edit_entity? program)
                    = node program, can_access_program
                    - if program.cores.empty?
                      %ul
                        - if can_access_program
                          %li= link_to t(:cm_index)[:core], '#', :class => "core"
                          %li= link_to t(:cm_index)[:service], '#'
                        - program.services.where(is_available: @show_unavailable).order("`order`, `name`").each do |service|
                          %li{:id => 'SERVICE' + service.id.to_s, :class => entity_visibility_class(service)}= node service
                    - else
                      %ul
                        - if can_access_program
                          %li= link_to t(:cm_index)[:core], '#', :class => "core"
                          %li= link_to t(:cm_index)[:service], '#'
                        - program.services.where(is_available: @show_unavailable).order("`order`, `name`").each do |service|
                          %li{:id => 'SERVICE' + service.id.to_s, :class => entity_visibility_class(service)}= node service                            
                        - program.cores.where(is_available: @show_unavailable).order("`order`").each do |core|
                          %li{:id => 'CORE' + core.id.to_s, :class => entity_visibility_class(core)}
                            - can_access_core = can_access_program || (@user.can_edit_entity? core)
                            = node core, can_access_core
                            %ul
                              - if can_access_core
                                %li= link_to t(:cm_index)[:service], '#'
                              - unless core.services.empty?
                                - core.services.where(is_available: @show_unavailable).order("`order`, `name`").each do |service|
                                  %li{:id => 'SERVICE' + service.id.to_s, :class => entity_visibility_class(service)}= node service
                                    

