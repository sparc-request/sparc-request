%section.mt-3#federalGrantInformation{ class: protocol.federally_funded? ? '' : 'd-none' }
  .form-group
    %h4.pb-2.mb-2.border-bottom
      = t('protocols.form.grant_information.header')

  .form-row
    .form-group.col-3
      = f.label :federal_grant_code_id
      = f.select :federal_grant_code_id, options_for_select(PermissibleValue.get_inverted_hash('federal_grant_code'), protocol.federal_grant_code_id), { include_blank: true }, class: 'selectpicker form-control', data: { live_search: 'true' }
    .form-group.col-3
      = f.label :federal_grant_serial_number
      = f.text_field :federal_grant_serial_number, class: 'form-control'
    .form-group.col-6
      = f.label :federal_grant_title
      = f.text_field :federal_grant_title, class: 'form-control'

  .form-row
    .form-group.col-3
      = f.label :federal_phs_sponsor
      = f.select :federal_phs_sponsor, options_for_select(PermissibleValue.get_inverted_hash('federal_grant_phs_sponsor'), protocol.federal_phs_sponsor), { include_blank: true }, class: 'selectpicker form-control', data: { live_search: 'true' }
    .form-group.col-3.d-flex.align-items-end.justify-content-center
      %label
        %strong
          = t('protocols.form.grant_information.sponsor_separator')
    .form-group.col-3
      = f.label :federal_non_phs_sponsor
      = f.select :federal_non_phs_sponsor, options_for_select(PermissibleValue.get_inverted_hash('federal_grant_non_phs_sponsor'), protocol.federal_non_phs_sponsor), { include_blank: true }, class: 'selectpicker form-control', data: { live_search: 'true' }
