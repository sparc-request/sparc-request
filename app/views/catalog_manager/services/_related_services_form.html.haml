.form-group.row
  .col-sm-8.text-center
    %h5= t(:catalog_manager)[:related_services_form][:service]
  .col-sm-2.text-center
    %h5= t(:catalog_manager)[:related_services_form][:required]
  .col-sm-2.text-center
    %h5= t(:catalog_manager)[:organization_form][:remove]
#related-services-container
  - service.service_relations.each do |service_relation|
    = render "catalog_manager/services/related_services_row", service: service, service_relation: service_relation
.col-sm-12.no-padding
  = text_field_tag 'new_related_services_search', nil, placeholder: t(:catalog_manager)[:related_services_form][:add_service], class: "form-control", data: { service_id: service.id }
