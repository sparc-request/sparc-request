.modal-dialog.modal-lg{ role: 'document' }
  .modal-content
    .modal-header
      %h3.modal-title
        = notification_subject_line(notification)
      %button.close{ type: 'button', data: { dismiss: 'modal' }, aria: { label: t('actions.close') } }
        %span{ aria: { hidden: 'true' } } &times;
    .modal-body
      - messages.each do |msg|
        .card-callout.callout-condensed.w-75{ class: msg.from == current_user.id ? 'callout-success float-right' : 'callout-info' }
          .card-body
            %h5.card-title.mb-2
              = msg.sender.full_name
            = simple_format(msg.body)
            %small.card-text.text-muted
              = format_datetime(msg.created_at)
      - if messages.none?
        .alert.alert-danger.mb-0
          = t('messages.none')
      - if notification.shared?
        .d-flex.w-100.justify-content-end
          %small.form-text.text-warning.mb-0
            = t('dashboard.messages.index.shared_text')
    .modal-footer
      - if notification.originator == current_user || notification.other_user == current_user
        = form_for [:dashboard, message], remote: true, html: { class: 'w-100' } do |f|
          = f.hidden_field :notification_id
          = f.hidden_field :to
          = f.hidden_field :from
          .form-row
            .form-group.col-9.offset-3
              = f.text_area :body, class: 'form-control', rows: 3, placeholder: t('messages.placeholder')
          .text-right
            %button.btn.btn-secondary{ type: 'button', data: { dismiss: 'modal' } }
              = t('actions.close')
            = f.submit t('actions.reply'), class: 'btn btn-primary'
      - else
        .text-right
          %button.btn.btn-secondary{ type: 'button', data: { dismiss: 'modal' } }
            = t('actions.close')
