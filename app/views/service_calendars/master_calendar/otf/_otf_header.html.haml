%tr.table_header
  %th
    = t(:calendars)[:otf][:header]
  - if study_tracker && !merged # display study tracker otf header
    %th.qty_unit_header
      = t(:calendars)[:otf][:header_fields][:number]
    %th.qty_unit_header
      = t(:calendars)[:otf][:header_fields][:unit_type]
    %th.qty_type_header
      = t(:calendars)[:otf][:header_fields][:number]
    %th.number_of_units_header
      = t(:calendars)[:otf][:header_fields][:qty_type]
    %th


  - elsif review # display review otf header
    %th
      = t(:calendars)[:otf][:header_fields][:your_cost]
    %th{ colspan: 6 }
    %th
      = t(:calendars)[:otf][:header_fields][:total_per_study]


  - else # display default or merged otf header
    - if (portal || study_tracker) && merged
      %th.your_cost_header.col-sm-1
        = t(:calendars)[:otf][:header_fields][:your_cost]
      %th.col-sm-7{ colspan: 7 }
      %th.total_per_study.col-sm-1
        = t(:calendars)[:otf][:header_fields][:total_per_study]
    - else
      %th.unit_costs_header.col-sm-2{ colspan: 2 }
        = t(:calendars)[:otf][:header_fields][:unit_costs]
      %th.col-sm-2{ colspan: 2 }
        %span
          = t(:calendars)[:otf][:header_fields][:unit_type]
          = t(:calendars)[:otf][:header_fields][:number]
      %th.col-sm-2{ colspan: 2 }
        %span
          = t(:calendars)[:otf][:header_fields][:qty_type]
          = t(:calendars)[:otf][:header_fields][:number]
      %th.col-sm-5{ colspan: 5 }
      - if merged
        %th.total_per_study{ rowspan: 2 }
          = t(:calendars)[:otf][:header_fields][:total_per_study]

    - unless merged
      %th
        = image_tag 'spinner.gif', class: 'service_calendar_spinner'
    - unless portal || study_tracker
      %tr.table_header
        %th.service_rate_header
          = t(:calendars)[:otf][:header_fields][:service_rate]
        %th.your_cost_header
          = t(:calendars)[:otf][:header_fields][:your_cost]
        - unless merged
          %th.total_per_study
            = t(:calendars)[:otf][:header_fields][:total_per_study]
