%table.table.table-bordered.table-condensed#admin_ssr_info
  %thead
    %tr.default
      %th= t(:admin_dashboard)[:id]
      %th= t(:admin_dashboard)[:pi]
      %th= t(:admin_dashboard)[:requester]
      %th= t(:admin_dashboard)[:short_title]
      %th= t(:admin_dashboard)[:export]
      %th= t(:admin_dashboard)[:delete]
      - if USE_EPIC
        %th= t(:admin_dashboard)[:epic_interface]
  %tbody
    %tr
      %td
        = "#{@protocol.id}-#{@sub_service_request.ssr_id}"
      %td= protocol.try(:principal_investigators).try(:first).try(:display_name)
      %td= sub_service_request.try(:service_request).try(:service_requester).try(:display_name)
      %td= protocol.try(:short_title)
      %td= link_to t(:admin_dashboard)[:export_link], service_request_path(service_request, :format => :xlsx, :admin_offset => 1), :class => "export_to_excel_button btn btn-sm btn-primary"
      %td= link_to "", "/portal/admin/sub_service_requests/#{sub_service_request.id}", :method => :delete, :confirm => t(:admin_dashboard)[:delete_confirm], :class => "delete-ssr-button btn btn-sm btn-danger glyphicon glyphicon-remove"
      - if USE_EPIC
        %td= link_to t(:admin_dashboard)[:send_to_epic], 'javascript:void(0)', :class => "send_to_epic_button btn btn-sm btn-primary", :sub_service_request_id => sub_service_request.id